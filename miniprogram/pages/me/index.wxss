.page {
  min-height: 100vh;
  background: #f5f7fb;
  box-sizing: border-box;
  padding: 40rpx 32rpx;
}

.content {
  margin-top: 40rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  color: #1f2933;
}

.desc {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #6b7280;
}

.me-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.04);
}

.user-row {
  display: flex;
  align-items: center;
}

.avatar,
.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 18rpx;
  overflow: hidden;
}

.avatar-placeholder {
  background-color: #e0e0e0;
}

.user-text {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.2;
  margin: 0;
  padding: 0;
}

.nickname-login {
  color: #1d4ed8;
}

.phone-auth-name-btn {
  background: transparent;
  padding: 0;
  margin: 0;
  border: none;
  display: inline-flex;
  align-items: center;
  justify-content: flex-start;
  height: auto;
  width: auto;
  line-height: 1.2;
}

.phone-auth-name-btn::after {
  border: none;
}

.me-list {
  margin-top: 24rpx;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.04);
}

.me-item {
  padding: 28rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.me-item:last-child {
  border-bottom: none;
}

.me-item-text {
  font-size: 30rpx;
  color: #333;
}

/* --- Favorites bottom sheet (5/6 height) --- */
.favorites-sheet-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.35);
  z-index: 2499;
  opacity: 0;
  transition: opacity 0.25s ease;
}

.favorites-sheet-mask-open {
  opacity: 1;
}

.favorites-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 83.33vh; /* 5/6 */
  background: #f5f7fb;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  transform: translateY(100%);
  transition: transform 0.25s ease;
  z-index: 2500;
  display: flex;
  flex-direction: column;
}

.favorites-sheet-open {
  transform: translateY(0);
}

.favorites-list-padding {
  flex: 1;
  height: 0;
  padding: 32rpx 32rpx 0rpx;
  box-sizing: border-box;
}

/* remove unused handle styles */
.favorites-sheet-handle {
  display: none;
}

.empty-favorites {
  padding: 120rpx 0;
  text-align: center;
  color: #9ca3af;
}

.list-loading {
  text-align: center;
  color: #9ca3af;
  font-size: 24rpx;
  padding: 20rpx 0 10rpx;
}

/* job-list inside favorites sheet should fill available height and keep padding */
.favorites-job-list {
  flex: 1;
  height: 100%;
}

/* --- Language bottom sheet (same motion pattern as favorites) --- */
.language-sheet-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.35);
  z-index: 2399;
  opacity: 0;
  transition: opacity 0.25s ease;
}

.language-sheet-mask-open {
  opacity: 1;
}

.language-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: auto;
  background: #ffffff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  transform: translateY(100%);
  transition: transform 0.25s ease;
  z-index: 2400;
  display: flex;
  flex-direction: column;
  padding-bottom: 10rpx;
}

.language-sheet-open {
  transform: translateY(0);
}

/* remove unused handle styles */
.language-sheet-handle {
  display: none;
}

.language-sheet-content {
  padding: 0 32rpx 32rpx;
  padding-top: 24rpx;
}

.language-item {
  height: 96rpx;
  border-radius: 18rpx;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 18rpx;
}

.language-item-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
}

.language-item-active {
  background: rgba(29, 78, 216, 0.10);
  border: 2rpx solid #1d4ed8;
}

.language-item-active .language-item-text {
  color: #1d4ed8;
}
