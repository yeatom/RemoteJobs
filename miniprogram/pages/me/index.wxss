/* --- Loading --- */
.loading-box {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #94a3b8;
  font-size: 26rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e2e8f0;
  border-top-color: #2e5fe9;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* --- Base Page Style --- */
.page {
    min-height: 100vh;
    background: #f8fafc; /* More neutral, professional slate tint */
    box-sizing: border-box;
    padding-bottom: 60rpx;
}

/* --- 1. Hero Section --- */
.hero-section {
    position: relative;
    padding: 40rpx 40rpx 60rpx;
    background: #ffffff;
    overflow: hidden;
}

.hero-bg {
    position: absolute;
    top: -200rpx;
    left: -100rpx;
    width: 600rpx;
    height: 600rpx;
    background: radial-gradient(circle, rgba(46, 95, 233, 0.15) 0%, transparent 70%); /* Stronger Blue */
    pointer-events: none;
}

.user-container {
    display: flex;
    align-items: center;
    position: relative;
    z-index: 1;
    margin-bottom: -25rpx;
}

.avatar-wrapper {
    position: relative;
    margin-right: 32rpx;
}

.avatar-large, .avatar-placeholder-large {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    border: 6rpx solid #ffffff;
    box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.08);
    transition: border-color 0.3s ease;
}

.member-color-3 .avatar-large {
    border-color: #1d4ed8;
    box-shadow: 0 0 20rpx rgba(29, 78, 216, 0.15);
}

.member-color-1 .avatar-large,
.member-color-2 .avatar-large {
    border-color: #5182f6;
}

.avatar-placeholder-large {
    background: #e2e8f0;
}

.edit-badge {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 44rpx;
    height: 44rpx;
    background: #5182f6;
    border-radius: 50%;
    border: 4rpx solid #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
}

.member-color-3 .edit-badge {
    background: #1d4ed8;
}

.edit-badge-icon {
    width: 47%;
    height: 47%;
    background: #ffffff;
    border-radius: 50%;
}

.user-info-main {
    display: flex;
    flex-direction: column;
}

.nickname-large {
    font-size: 44rpx;
    font-weight: 700;
    color: #0f172a;
    line-height: 1.2;
}

.user-subtext-wrapper {
    display: flex;
    align-items: center;
    margin-top: 12rpx;
    gap: 4rpx;
}

.user-subtext-wrapper .row-arrow {
    font-size: 20rpx;
    color: #cbd5e1; /* Revert to Original Light Gray */
    margin-left: 4rpx;
}

.user-subtext {
    font-size: 26rpx;
    color: #64748b;
}

/* --- Content Body Padding --- */
.content-body {
    padding: 0 32rpx;
    margin-top: -30rpx;
    position: relative;
    z-index: 10;
}

/* --- 2. VIP Card --- */
.vip-benefit-card {
    background: #ffffff;
    border-radius: 28rpx;
    padding: 32rpx;
    box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.04);
    position: relative;
    overflow: hidden;
    margin-bottom: 32rpx;
    border: 1rpx solid rgba(226, 232, 240, 0.6);
}

/* Level Specific Card Backgrounds */
.vip-level-1.vip-active {
    background: linear-gradient(135deg, #ffffff 0%, #f0f7ff 100%);
    border: 1rpx solid rgba(46, 95, 233, 0.1);
}

.vip-level-2.vip-active {
    background: linear-gradient(135deg, #ffffff 0%, #ebf4ff 100%);
    border: 1rpx solid rgba(46, 95, 233, 0.15);
}

.vip-level-3.vip-active {
    background: linear-gradient(135deg, #ffffff 0%, #f5f9ff 100%);
    /* Layered Shadows: Soft ambient + crisp directional */
    box-shadow: 
        0 20rpx 40rpx rgba(46, 95, 233, 0.08),
        0 8rpx 16rpx rgba(0, 0, 0, 0.02);
    /* High-end subtle border */
    border: 1rpx solid rgba(46, 95, 233, 0.12);
    /* Floating effect */
    transform: translateY(-4rpx);
}

.vip-main-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
}

.vip-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

.vip-expiry-date {
    font-size: 22rpx;
    color: #94a3b8;
    margin-top: 8rpx;
    opacity: 0.8;
}

.vip-card-body {
    margin-top: 20rpx;
    flex: 1;
}

.vip-status-display {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
}

.vip-info-row {
    display: flex;
    align-items: center;
    background: rgba(255, 255, 255, 0.15);
    padding: 10rpx 20rpx;
    border-radius: 12rpx;
    width: fit-content;
    border: 1rpx solid rgba(255, 255, 255, 0.1);
}

/* 适配普通用户或低等级会员 */
.vip-benefit-card.vip-level-0 .vip-info-row,
.vip-benefit-card.vip-level-1 .vip-info-row {
    background: rgba(46, 95, 233, 0.05);
    border-color: rgba(46, 95, 233, 0.1);
}

.info-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.info-sep {
    width: 1rpx;
    height: 32rpx;
    background: rgba(255, 255, 255, 0.3);
    margin: 0 20rpx;
}

.vip-benefit-card.vip-level-0 .info-sep,
.vip-benefit-card.vip-level-1 .info-sep {
    background: rgba(46, 95, 233, 0.2);
}

.info-label {
    font-size: 18rpx;
    color: rgba(255, 255, 255, 0.7);
    font-weight: 500;
    margin-bottom: 2rpx;
}

.vip-benefit-card.vip-level-0 .info-label,
.vip-benefit-card.vip-level-1 .info-label {
    color: #64748b;
}

.info-value {
    font-size: 24rpx;
    color: #ffffff;
    font-weight: 800;
}

.vip-benefit-card.vip-level-0 .info-value,
.vip-benefit-card.vip-level-1 .info-value {
    color: #2e5fe9;
}

.status-info-box {
    display: flex;
    gap: 48rpx;
    margin-top: 12rpx;
    padding-top: 24rpx;
    border-top: 1rpx solid #f1f5f9;
    position: relative;
    z-index: 1;
}

.status-data-item {
    display: flex;
    flex-direction: column;
}

.data-label {
    font-size: 20rpx;
    color: #94a3b8;
    margin-bottom: 4rpx;
    font-weight: 500;
}

.data-value {
    font-size: 30rpx;
    font-weight: 800;
    color: #1e293b;
}

/* 允许根据背景色微调（如果以后背景变深） */
.tier-3 .data-value { color: #0f172a; }
.tier-2 .data-value { color: #1e293b; }
.tier-1 .data-value { color: #2e5fe9; }

.vip-card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 28rpx;
}

.upgrade-guide-box {
    background: rgba(46, 95, 233, 0.06);
    padding: 12rpx 20rpx;
    border-radius: 12rpx;
    border: 1rpx dashed rgba(46, 95, 233, 0.3);
}

.upgrade-text {
    font-size: 22rpx;
    color: #2e5fe9;
    font-weight: 600;
}

.vip-title-row {
    display: flex;
    align-items: center;
    gap: 12rpx;
}

.vip-identity-title {
    font-size: 36rpx;
    font-weight: 800;
    color: #1e293b;
}

.vip-badge-icon {
    width: 36rpx;
    height: 36rpx;
    margin-left: 12rpx;
    display: block;
    -webkit-mask-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M12 0L14.59 9.41L24 12L14.59 14.59L12 24L9.41 14.59L0 12L9.41 9.41L12 0Z' fill='currentColor'/%3E%3C/svg%3E");
    -webkit-mask-size: contain;
    -webkit-mask-repeat: no-repeat;
    -webkit-mask-position: center;
}

/* 1. Trial Star: Solid Theme Blue */
.badge-level-1 {
    background: #2e5fe9;
}

/* 2. Member Star: Theme Blue Gradient */
.badge-level-2 {
    background: linear-gradient(135deg, #60a5fa 0%, #2e5fe9 100%);
}

/* 3. Premium Star: Dazzling Blue Gradient + Glow */
.badge-level-3 {
    background: linear-gradient(135deg, #3b82f6 0%, #2e5fe9 45%, #1d4ed8 100%);
    box-shadow: 0 0 12rpx rgba(46, 95, 233, 0.4);
}

.vip-status-tag {
    font-size: 18rpx;
    font-weight: 800;
    color: #ffffff;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
    letter-spacing: 1rpx;
}

.tag-level-1 { background: #2e5fe9; }
.tag-level-2 { background: #1d4ed8; }
.tag-level-3 { background: linear-gradient(to right, #2e5fe9, #1d4ed8); }

.vip-desc {
    font-size: 24rpx;
    color: #64748b;
    margin-top: 8rpx;
    display: block;
}

.vip-btn {
    font-size: 24rpx;
    font-weight: 600;
    color: #ffffff;
    background: #2e5fe9;
    padding: 16rpx 32rpx;
    border-radius: 100rpx;
    box-shadow: 0 4rpx 12rpx rgba(46, 95, 233, 0.2);
}

.btn-level-1 { background: #2e5fe9; box-shadow: 0 4rpx 10rpx rgba(46, 95, 233, 0.15); }
.btn-level-2 { background: linear-gradient(135deg, #60a5fa 0%, #2e5fe9 100%); box-shadow: 0 4rpx 12rpx rgba(46, 95, 233, 0.2); }
.btn-level-3 { background: linear-gradient(135deg, #3b82f6 0%, #2e5fe9 45%, #1d4ed8 100%); box-shadow: 0 4rpx 15rpx rgba(29, 78, 216, 0.3); }

.vip-active .vip-btn {
    background: rgba(0, 0, 0, 0.05);
    color: #64748b;
    box-shadow: none;
}

/* Shimmer for Premium */
.shimmer-effect {
    position: absolute;
    top: 0; left: -100%;
    width: 150rpx; /* Narrower for more elegance */
    height: 100%;
    background: linear-gradient(
        to right, 
        transparent 0%, 
        rgba(46, 95, 233, 0.03) 40%, 
        rgba(46, 95, 233, 0.12) 50%, 
        rgba(46, 95, 233, 0.03) 60%, 
        transparent 100%
    );
    transform: skewX(-25deg);
    animation: shimmer 19s cubic-bezier(0.4, 0, 0.2, 1) infinite;
    z-index: 1;
}

@keyframes shimmer {
    0% { left: -100%; }
    21.05% { left: 200%; }
    100% { left: 200%; }
}

.vip-card-bg-icon {
    position: absolute;
    right: -40rpx;
    bottom: -40rpx;
    width: 240rpx;
    height: 240rpx;
    opacity: 0.05;
    background: #5182f6;
    -webkit-mask-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M12 0L14.59 9.41L24 12L14.59 14.59L12 24L9.41 14.59L0 12L9.41 9.41L12 0Z' fill='currentColor'/%3E%3C/svg%3E");
    -webkit-mask-size: contain;
    -webkit-mask-repeat: no-repeat;
    -webkit-mask-position: center;
    transform: rotate(-15deg);
}

.member-color-3.vip-card-bg-icon {
    background: #1d4ed8;
    opacity: 0.08;
}

/* --- 3. Action List Group --- */
.action-list-group {
    background: #ffffff;
    border-radius: 28rpx;
    padding: 8rpx 0;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.03);
    border: 1rpx solid rgba(226, 232, 240, 0.6);
    margin-bottom: 32rpx;
}

.action-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 28rpx 32rpx;
    position: relative;
    transition: background 0.2s;
}

.action-row:not(:last-child)::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 132rpx;
    right: 32rpx;
    height: 1rpx;
    background: #f1f5f9;
}

.action-row .row-left {
    display: flex;
    align-items: center;
}

.icon-circle {
    width: 80rpx;
    height: 80rpx;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
    margin-right: 24rpx;
    background: #f0f7ff; /* Consistent Light Blue Base */
    border: 1rpx solid rgba(46, 95, 233, 0.08); /* Faint blue border */
}

/* Unified Brand Blue tint for all list icons */
.blue-bg, .green-bg, .purple-bg { background: #f0f7ff; }

.action-row .row-text {
    display: flex;
    flex-direction: column;
}

.action-row .row-title {
    font-size: 30rpx;
    font-weight: 600; /* Matching overall font refinement */
    color: #0f172a;
    line-height: 1.4;
}

.action-row .row-subtitle {
    font-size: 22rpx;
    color: #64748b; /* Better contrast */
    margin-top: 4rpx;
}

.action-row .row-right {
    display: flex;
    align-items: center;
    gap: 16rpx;
}

.row-arrow {
    font-size: 24rpx;
    color: #cbd5e1; /* Revert to Original Light Gray */
    font-weight: 500;
}

.row-hover {
    background: #f8fafc;
}

/* --- 4. Settings List --- */
.settings-group {
    background: #ffffff;
    border-radius: 28rpx;
    padding: 8rpx 0;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.03);
    border: 1rpx solid rgba(226, 232, 240, 0.6);
}

.setting-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 32rpx;
    position: relative;
}

.setting-row:not(:last-child)::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 100rpx;
    right: 32rpx;
    height: 1rpx;
    background: #f1f5f9;
}

.row-left {
    display: flex;
    align-items: center;
}

.row-icon-box {
    width: 48rpx;
    height: 48rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 20rpx;
    font-size: 32rpx;
}

.row-label {
    font-size: 30rpx;
    font-weight: 500;
    color: #334155;
}

.row-right {
    display: flex;
    align-items: center;
    gap: 12rpx;
}

.row-value {
    font-size: 26rpx;
    color: #94a3b8;
}

.row-hover {
    background: #f8fafc;
}

/* --- Bottom Sheet Custom Styles (Inherited from original) --- */
.mode-section-title { font-size: 24rpx; color: #6b7280; padding: 24rpx 32rpx 12rpx; font-weight: 500; }
.mode-section-title-vip { display: flex; align-items: center; gap: 12rpx; margin-top: 12rpx; }
.vip-tag-mini {
    background: linear-gradient(135deg,rgb(77, 140, 243) 0%,rgb(46, 95, 233) 100%);
    color: #ffffff;
    font-size: 18rpx;
    font-weight: bold;
    padding: 4rpx 10rpx;
    border-radius: 6rpx;
    box-shadow: 0 2rpx 8rpx rgba(29, 78, 216, 0.3);
}
