    width: 100%;
    background: linear-gradient(90deg, #ffffff 0%, #f0f7ff 100%);
    border-radius: 32rpx;
    padding: 40rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 40rpx;
    border: 2rpx solid rgba(46, 95, 233, 0.12);
    box-shadow: 0 4rpx 24rpx rgba(46, 95, 233, 0.06);
    transition: all 0.2s ease;
    position: relative;
    overflow: hidden;
    box-sizing: border-box;
