.points-val { font-size: 32rpx; color: var(--primary); font-weight: 800; }
.points-label { font-size: 22rpx; color: var(--text-sub); margin-left: 8rpx; }

.is-topup .points-val { color: #d97706; }

.product-desc {
    font-size: 20rpx;
    color: var(--text-holder);
    margin-top: auto;
    line-height: 1.4;
    white-space: normal;
}

.action-btn-v2.full-width {
    width: 100%;
    margin: 0 32rpx;
}
