.vip-benefit-card.vip-level-1 .vip-info-row {
    background: rgba(46, 95, 233, 0.05);
    border-color: rgba(46, 95, 233, 0.1);
}

.info-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.info-sep {
    width: 1rpx;
    height: 32rpx;
    background: rgba(255, 255, 255, 0.3);
    margin: 0 20rpx;
}

.vip-benefit-card.vip-level-0 .info-sep,
.vip-benefit-card.vip-level-1 .info-sep {
    background: rgba(46, 95, 233, 0.2);
}

.info-label {
    font-size: 18rpx;
    color: rgba(255, 255, 255, 0.7);
    font-weight: 500;
    margin-bottom: 2rpx;
}

.vip-benefit-card.vip-level-0 .info-label,
.vip-benefit-card.vip-level-1 .info-label {
    color: #64748b;
}

.info-value {
    font-size: 24rpx;
    color: #ffffff;
    font-weight: 800;
}

.vip-benefit-card.vip-level-0 .info-value,
.vip-benefit-card.vip-level-1 .info-value {
