.tier-3 .data-value { color: #0f172a; }
.tier-2 .data-value { color: #1e293b; }
.tier-1 .data-value { color: #2e5fe9; }

.vip-card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 28rpx;
}

.upgrade-guide-box {
    background: rgba(46, 95, 233, 0.06);
    padding: 12rpx 20rpx;
    border-radius: 12rpx;
    border: 1rpx dashed rgba(46, 95, 233, 0.3);
}

.upgrade-text {
    font-size: 22rpx;
    color: #2e5fe9;
    font-weight: 600;
}

.vip-title-row {
    display: flex;
    align-items: center;
    gap: 12rpx;
}

.vip-identity-title {
    font-size: 36rpx;
    font-weight: 800;
    color: #1e293b;
}

.vip-badge-icon {
    width: 36rpx;
    height: 36rpx;
    margin-left: 12rpx;
    display: block;
    -webkit-mask-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M12 0L14.59 9.41L24 12L14.59 14.59L12 24L9.41 14.59L0 12L9.41 9.41L12 0Z' fill='currentColor'/%3E%3C/svg%3E");
    -webkit-mask-size: contain;
    -webkit-mask-repeat: no-repeat;
