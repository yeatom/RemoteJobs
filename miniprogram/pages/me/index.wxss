    margin-bottom: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.author-header {
    text-align: center;
    margin-bottom: 26rpx;
}

.author-title {
    font-size: 30rpx;
    font-weight: 700;
    color: var(--text-main);
    display: block;
    margin-bottom: 2rpx;
}

.author-slogan {
    font-size: 24rpx;
    color: var(--text-sub);
    line-height: 1.5;
    display: block;
    padding: 0 5rpx;
}

.qr-code-container {
