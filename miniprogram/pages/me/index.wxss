/* --- Loading --- */
.loading-box {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #94a3b8;
  font-size: 26rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e2e8f0;
  border-top-color: #2e5fe9;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* --- Base Page Style --- */
.page {
    min-height: 100vh;
    background: #f8fafc; /* More neutral, professional slate tint */
    box-sizing: border-box;
    padding-bottom: 60rpx;
}

/* --- 1. Hero Section --- */
.hero-section {
    position: relative;
    padding: 15rpx 40rpx 60rpx;
    background: #ffffff;
    overflow: hidden;
}

.hero-bg {
    position: absolute;
    top: -200rpx;
    left: -100rpx;
    width: 600rpx;
    height: 600rpx;
    background: radial-gradient(circle, rgba(46, 95, 233, 0.08) 0%, transparent 70%);
    pointer-events: none;
}

.user-container {
    display: flex;
    align-items: center;
    position: relative;
    z-index: 1;
}

.avatar-wrapper {
    position: relative;
    margin-right: 32rpx;
}

.avatar-large, .avatar-placeholder-large {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    border: 6rpx solid #ffffff;
    box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.08);
    transition: border-color 0.3s ease;
}

.member-color-3 .avatar-large {
    border-color: #1d4ed8;
    box-shadow: 0 0 20rpx rgba(29, 78, 216, 0.15);
}

.member-color-1 .avatar-large,
.member-color-2 .avatar-large {
    border-color: #5182f6;
}

.avatar-placeholder-large {
    background: #e2e8f0;
}

.edit-badge {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 44rpx;
    height: 44rpx;
    background: #5182f6;
    border-radius: 50%;
    border: 4rpx solid #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
}

.member-color-3 .edit-badge {
    background: #1d4ed8;
}

.edit-badge-icon {
    width: 47%;
    height: 47%;
    background: #ffffff;
    border-radius: 50%;
}

.user-info-main {
    display: flex;
    flex-direction: column;
}

.nickname-large {
    font-size: 44rpx;
    font-weight: 700;
    color: #0f172a;
    line-height: 1.2;
}

.user-subtext-wrapper {
    display: flex;
    align-items: center;
    margin-top: 12rpx;
    gap: 4rpx;
}

.user-subtext {
    font-size: 26rpx;
    color: #64748b;
}

/* --- Content Body Padding --- */
.content-body {
    padding: 0 32rpx;
    margin-top: -30rpx;
    position: relative;
    z-index: 10;
}

/* --- 2. VIP Card --- */
.vip-benefit-card {
    background: #ffffff;
    border-radius: 28rpx;
    padding: 32rpx;
    box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.04);
    position: relative;
    overflow: hidden;
    margin-bottom: 32rpx;
    border: 1rpx solid rgba(226, 232, 240, 0.6);
}

/* Level Specific Card Backgrounds */
.vip-level-1.vip-active {
    background: linear-gradient(135deg, #ffffff 0%, #f0f7ff 100%);
    border: 1rpx solid rgba(46, 95, 233, 0.1);
}

.vip-level-2.vip-active {
    background: linear-gradient(135deg, #ffffff 0%, #ebf4ff 100%);
    border: 1rpx solid rgba(46, 95, 233, 0.15);
}

.vip-level-3.vip-active {
    background: linear-gradient(135deg, #ffffff 0%, #f5f9ff 100%);
    /* Layered Shadows: Soft ambient + crisp directional */
    box-shadow: 
        0 20rpx 40rpx rgba(46, 95, 233, 0.08),
        0 8rpx 16rpx rgba(0, 0, 0, 0.02);
    /* High-end subtle border */
    border: 1rpx solid rgba(46, 95, 233, 0.12);
    /* Floating effect */
    transform: translateY(-4rpx);
}

.vip-main-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
}

.vip-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

.vip-expiry-date {
    font-size: 22rpx;
    color: #94a3b8;
    margin-top: 8rpx;
