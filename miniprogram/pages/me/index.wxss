.footer-left { display: flex; flex-direction: column; }
.total-label { font-size: 20rpx; color: #64748b; font-weight: 600; }
.total-price-box { display: flex; align-items: baseline; color: #2e5fe9; line-height: 1; height: 50rpx; }
