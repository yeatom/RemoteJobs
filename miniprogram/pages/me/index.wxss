.total-amt { font-size: 44rpx; font-weight: 900; font-family: 'DIN Alternate'; }
.old-amt { 
    font-size: 28rpx; 
    color: #94a3b8; 
    text-decoration: line-through; 
    margin-right: 12rpx; 
    font-weight: 500;
}

.price-loading-spinner {
    width: 32rpx;
    height: 32rpx;
    border: 3rpx solid #e2e8f0;
    border-top-color: #2e5fe9;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    align-self: center;
}

.pay-btn-v3 {
    background: #2e5fe9; 
    color: #fff;
    font-size: 26rpx;
    font-weight: 700;
    padding: 16rpx 50rpx;
    border-radius: 100rpx;
