/* --- 8. Professional Member Hub V2 --- */
.member-hub-content.v2-design {
  background: #fdfdff;
  padding-bottom: env(safe-area-inset-bottom);
}

.hub-status-section {
  margin: 24rpx 32rpx;
  padding: 40rpx;
  border-radius: 40rpx;
  background: #ffffff;
  box-shadow: 0 20rpx 50rpx rgba(15, 23, 42, 0.05);
  border: 1rpx solid rgba(226, 232, 240, 0.5);
  position: relative;
  overflow: hidden;
}

/* Tiered Background Accents */
.hub-status-section::before {
  content: '';
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  z-index: 0;
  opacity: 0.1;
}

.tier-1::before { background: radial-gradient(circle, #2e5fe9 0%, transparent 70%); }
.tier-2::before { background: radial-gradient(circle, #5182f6 0%, transparent 70%); }
.tier-3::before { background: radial-gradient(circle, #d97706 0%, transparent 70%); opacity: 0.15; }

.status-main-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  position: relative;
  z-index: 1;
  margin-bottom: 32rpx;
}

.tier-identity {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tier-name {
  font-size: 40rpx;
  font-weight: 900;
  color: #1e293b;
  letter-spacing: -0.5rpx;
}

.status-date {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  background: rgba(46, 95, 233, 0.05);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.date-label {
  font-size: 18rpx;
  color: #94a3b8;
  text-transform: uppercase;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.date-value {
  font-size: 26rpx;
  font-weight: 800;
  color: #2e5fe9;
  margin-top: 2rpx;
}

/* Visual Quota Display */
.hub-quota-visual {
  background: #f8fafc;
  border-radius: 24rpx;
  padding: 24rpx;
  position: relative;
  z-index: 1;
}

.visual-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.visual-title {
  font-size: 24rpx;
  font-weight: 700;
  color: #64748b;
}

.visual-badge {
  font-size: 18rpx;
  font-weight: 800;
  background: #1e293b;
  color: #ffffff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.visual-infinite {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.infinite-text {
  font-size: 48rpx;
  font-weight: 900;
  color: #1e293b;
}

.sparkle-v2 {
  font-size: 32rpx;
  animation: pulse-glow 2s infinite;
}

.visual-progress-bar {
  height: 12rpx;
  background: #e2e8f0;
  border-radius: 100rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.visual-progress-fill {
  height: 100%;
  background: linear-gradient(to right, #3b82f6, #2e5fe9);
  border-radius: 100rpx;
  transition: width 1s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.visual-progress-fill.exhausted {
  background: #ef4444;
}

.visual-stats {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #94a3b8;
}

.stat-num {
  font-weight: 800;
  color: #1e293b;
}

.stat-sep {
  color: #e2e8f0;
}

/* Privilege Grid */
.hub-privilege-section {
  padding: 0 32rpx;
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 20rpx;
  font-weight: 800;
  color: #94a3b8;
  letter-spacing: 2rpx;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.privilege-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.privilege-card {
  background: #ffffff;
  border: 1rpx solid #f1f5f9;
  border-radius: 32rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  position: relative;
  transition: all 0.2s;
}

.privilege-card.full-width {
  grid-column: span 2;
  flex-direction: row;
  align-items: center;
  gap: 32rpx;
}

.privilege-icon-box {
  width: 64rpx;
  height: 64rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.blue { background: #eff6ff; }
.purple { background: #f5f3ff; }
.gold { background: #fffbeb; }
.indigo { background: #eef2ff; }

.p-name {
  font-size: 28rpx;
  font-weight: 800;
  color: #1e293b;
  display: block;
}

.p-desc {
  font-size: 20rpx;
  color: #64748b;
  line-height: 1.4;
  margin-top: 4rpx;
  display: block;
}

.unlock-indicator {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  font-size: 20rpx;
  opacity: 0.3;
}

/* V2 Actions */
.hub-v2-actions {
  display: flex;
  gap: 20rpx;
  padding: 0 32rpx 40rpx;
}

.action-btn-v2 {
  flex: 1;
  height: 100rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 800;
  transition: all 0.2s;
}

.action-btn-v2.secondary {
  background: #f1f5f9;
  color: #475569;
}

.action-btn-v2.primary {
  background: #1e293b;
  color: #ffffff;
  box-shadow: 0 12rpx 24rpx rgba(30, 41, 59, 0.2);
}

.action-btn-v2:active {
  transform: scale(0.96);
  opacity: 0.9;
}

@keyframes pulse-glow {
  0%, 100% { opacity: 1; transform: scale(1); filter: drop-shadow(0 0 2rpx gold); }
  50% { opacity: 0.7; transform: scale(1.1); filter: drop-shadow(0 0 8rpx gold); }
}

