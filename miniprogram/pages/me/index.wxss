/* --- Loading --- */
.loading-box {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: var(--text-holder);
  font-size: 26rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--border);
  border-top-color: var(--primary);
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* --- Base Page Style --- */
page {
    height: 100%;
    overflow: hidden;
}

.page {
    height: 100%;
    background: var(--bg-main); /* More neutral, professional slate tint */
    box-sizing: border-box;
}

.me-scroll-container {
    height: 100%;
    display: flex;
    flex-direction: column;
}

/* --- 1. Hero Section --- */
.hero-section {
    position: relative;
    padding: 40rpx 40rpx 60rpx;
    background: #fff;
    overflow: hidden;
    flex-shrink: 0;
}

.hero-bg {
    position: absolute;
    top: -200rpx;
    left: -100rpx;
    width: 600rpx;
    height: 600rpx;
    background: radial-gradient(circle, rgb(46 95 233 / 15%) 0%, transparent 70%); /* Stronger Blue */
    pointer-events: none;
}

.user-container {
    display: flex;
    align-items: center;
    position: relative;
    z-index: 1;
    margin-bottom: -25rpx;
}

.avatar-wrapper {
    position: relative;
    margin-right: 32rpx;
}

.avatar-large, .avatar-placeholder-large {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    border: 6rpx solid var(--primary); /* 使用项目主色蓝 */
    box-shadow: 0 8rpx 24rpx rgb(15 23 42 / 8%);
    transition: border-color 0.3s ease;
}

.avatar-placeholder-large {
    background: var(--border);
}

.edit-badge {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 44rpx;
    height: 44rpx;
    background: var(--primary); /* 改为蓝色背景 */
    border-radius: 50%;
    border: 4rpx solid #fff; /* 改为白色边框 */
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
}

.edit-badge-icon {
    width: 45%;
    height: 45%;
    background: #fff; /* 改为白色内芯 */
    border-radius: 50%;
}

.user-info-main {
    display: flex;
    flex-direction: column;
}

.nickname-large {
    font-size: 44rpx;
    font-weight: 700;
    color: var(--text-main);
    line-height: 1.2;
}

.user-subtext-wrapper {
    display: flex;
    align-items: center;
    margin-top: 12rpx;
    gap: 4rpx;
}

.user-subtext-wrapper .ui-arrow {
    font-size: 20rpx;
    margin-left: 4rpx;
    color: #cbd5e1;
}

.user-subtext {
    font-size: 26rpx;
    color: var(--text-sub);
}

/* --- Content Body Padding --- */
.content-body {
    padding: 0 32rpx;
    margin-top: -30rpx;
    position: relative;
    z-index: 10;
    flex-shrink: 0;
    padding-bottom: 20rpx;
}

/* --- 2. VIP Card --- */
.vip-benefit-card {
    background: #fff;
    border-radius: 28rpx;
    padding: 32rpx;
    box-shadow: 0 12rpx 30rpx rgb(0 0 0 / 4%);
    position: relative;
    overflow: hidden;
    margin-bottom: 32rpx;
    border: 1rpx solid rgb(226 232 240 / 60%);
}

/* Level Specific Card Backgrounds */
.vip-level-1.vip-active {
    background: linear-gradient(135deg, #fff 0%, #f0f7ff 100%);
    border: 1rpx solid rgb(46 95 233 / 10%);
}

.vip-level-2.vip-active {
    background: linear-gradient(135deg, #fff 0%, #ebf4ff 100%);
    border: 1rpx solid rgb(46 95 233 / 15%);
}

.vip-level-3.vip-active {
    background: linear-gradient(135deg, #fff 0%, #f5f9ff 100%);
    /* Layered Shadows: Soft ambient + crisp directional */
    box-shadow: 
        0 20rpx 40rpx rgb(46 95 233 / 8%),
        0 8rpx 16rpx rgb(0 0 0 / 2%);
    /* High-end subtle border */
    border: 1rpx solid rgb(46 95 233 / 12%);
    /* Floating effect */
    transform: translateY(-4rpx);
}

.vip-main-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
}

.vip-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

/* --- 2. VIP Card V3 (Redesigned) --- */
.vip-card-v3 {
    margin: 32rpx 0;
    height: 280rpx;
    border-radius: 32rpx;
    position: relative;
    overflow: hidden;
    background: #fff;
    box-shadow: 0 10rpx 30rpx rgb(46 95 233 / 6%);
    border: 1rpx solid rgb(226 232 240 / 80%);
    transition: all 0.2s ease;
}

.vip-card-v3:active {
    transform: scale(0.985);
}

.vip-card-v3.level-1,
.vip-card-v3.level-2,
.vip-card-v3.level-3,
.vip-card-v3.level-4 { 
    background: linear-gradient(135deg, #fff 0%, #f8fbff 100%);
    border-color: rgb(46 95 233 / 12%);
}

.card-glow {
    position: absolute;
    top: -40%;
    right: -10%;
    width: 350rpx;
    height: 350rpx;
    background: radial-gradient(circle, rgb(46 95 233 / 6%) 0%, transparent 70%); 
    pointer-events: none;
    filter: blur(40rpx);
}

.card-content {
    position: relative;
    z-index: 2;
    padding: 36rpx;
    height: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.card-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

.card-badge-wrap {
    display: flex;
    align-items: center;
    gap: 12rpx;
    background: var(--border);
    padding: 10rpx 28rpx;
    border-radius: 100rpx;
    border: 1rpx solid var(--divider);
}

.vip-name {
    font-size: 24rpx;
    font-weight: 700;
    color: #475569;
    letter-spacing: 1rpx;
}

.card-points {
    display: flex;
    flex-direction: column;
    width: 260rpx;
}

.points-upper {
    display: flex;
    align-items: baseline;
    justify-content: flex-end;
    margin-bottom: 12rpx;
    gap: 4rpx;
}

.points-label {
    font-size: 22rpx;
    color: var(--text-sub);
    font-weight: 500;
}

.points-current {
    font-size: 32rpx;
    /* weight/color 由 .ui-value-bold 提供 */
}

.points-total {
    font-size: 22rpx;
    color: var(--text-holder);
}

.points-progress-wrap {
    width: 100%;
    height: 8rpx;
    background: var(--border); /* 使用浅灰色变量 */
    border-radius: 100rpx;
    overflow: hidden;
}

.points-progress-inner {
    height: 100%;
    background: var(--primary); /* 使用项目主色蓝 */
    border-radius: 100rpx;
    transition: width 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.card-bottom {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.card-validity {
    display: flex;
    flex-direction: column;
}

.val-label {
    font-size: 22rpx;
    color: var(--text-sub);
    margin-bottom: 4rpx;
}

.val-date {
    font-size: 26rpx;
    /* 应用 UI 统一样式 */
}

/* --- 3. Action List Group --- */
.action-list-group {
    background: #fff;
    border-radius: 28rpx;
    padding: 8rpx 0;
    margin-bottom: 29rpx;
    box-shadow: 0 8rpx 20rpx rgb(0 0 0 / 3%);
    border: 1rpx solid rgb(226 232 240 / 60%);
}

.action-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 32rpx;
    position: relative;
    transition: background 0.2s ease;
    --divider-gap-left: 40rpx;
    --divider-gap-right: 40rpx;
}

.action-row .row-left {
    display: flex;
    align-items: center;
    flex: 1;
}

.icon-circle {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
    margin-right: 28rpx;
    flex-shrink: 0;
}

/* Unified Brand Blue tint for all list icons */
.blue-bg { background: #f0f7ff; }
.green-bg { background: #f0fdf4; }
.purple-bg { background: #faf5ff; }

.action-row .row-text {
    display: flex;
    flex-direction: column;
}

.action-row .row-title {
    font-size: 30rpx;
    font-weight: 700;
    color: var(--text-main);
}

.action-row .row-subtitle {
    font-size: 22rpx;
    color: var(--text-sub);
    margin-top: 4rpx;
}

.action-row .row-right {
    display: flex;
    align-items: center;
    gap: 12rpx;
}

/* --- 4. Settings List --- */
.settings-group {
    background: #fff;
    border-radius: 28rpx;
    padding: 8rpx 0;
    margin-bottom: 24rpx;
    box-shadow: 0 8rpx 20rpx rgb(0 0 0 / 3%);
    border: 1rpx solid rgb(226 232 240 / 60%);
}

.setting-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 32rpx;
    position: relative;
    transition: background 0.2s ease;
    --divider-gap-left: 40rpx;
    --divider-gap-right: 40rpx;
}

.setting-row .row-left {
    display: flex;
    align-items: center;
    flex: 1;
}

.setting-row .row-icon-box {
    width: 56rpx;
    height: 56rpx;
    background: var(--bg-main);
    border-radius: 14rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 24rpx;
    font-size: 28rpx;
}

.setting-row .row-label {
    font-size: 29rpx;
    font-weight: 600;
    color: var(--text-main);
}

.setting-row .row-right {
    display: flex;
    align-items: center;
    gap: 12rpx;
}

.setting-row .row-value {
    font-size: 26rpx;
    /* 样式由 .ui-value-bold 提供 */
}

.row-hover {
    background: var(--bg-main);
}

/* --- Bottom Sheet Custom Styles (Inherited from original) --- */
.mode-section-title { font-size: 24rpx; color: #6b7280; padding: 24rpx 32rpx 12rpx; font-weight: 500; }
.mode-section-title-vip { display: flex; align-items: center; gap: 12rpx; margin-top: 12rpx; }
.vip-tag-mini {
    background: linear-gradient(135deg,rgb(77 140 243) 0%,rgb(46 95 233) 100%);
    color: #fff;
    font-size: 18rpx;
    font-weight: bold;
    padding: 4rpx 10rpx;
    border-radius: 6rpx;
    box-shadow: 0 2rpx 8rpx rgb(29 78 216 / 30%);
}
.mode-card {
    margin: 12rpx 32rpx;
    padding: 24rpx;
    background: #f9fafb;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    border: 3rpx solid transparent;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}
.mode-card-active { background: rgb(29 78 216 / 4%); border-color: var(--primary-dark); }
.mode-card-icon { font-size: 36rpx; margin-right: 20rpx; filter: drop-shadow(0 0 2rpx rgb(59 130 246 / 40%)); }
.mode-card-main { flex: 1; display: flex; flex-direction: column; }
.mode-name { font-size: 28rpx; font-weight: 600; color: #111827; }
.mode-desc { font-size: 22rpx; color: #6b7280; margin-top: 4rpx; }
.mode-card-vip { background: linear-gradient(to right, #fff, #f8fbff); border: 1px solid #e5e7eb; }
.mode-card-vip.mode-card-active {
    border: 3rpx solid var(--primary-mid);
    background: linear-gradient(to right, #f0f7ff, #eef2ff);
    box-shadow: 0 4rpx 12rpx rgb(59 130 246 / 12%);
}
.mode-check { margin-left: 20rpx; }

/* --- 5. Member Hub Sheet --- */
.member-hub-content {
    padding: 0;
    background: #fff;
    border-radius: 40rpx 40rpx 0 0;
}

.hub-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40rpx;
    padding: 10rpx 32rpx 0;
}

.hub-user-info {
    display: flex;
    align-items: center;
    gap: 16rpx;
}

.hub-level-name {
    font-size: 36rpx;
    font-weight: 800;
    color: var(--text-main);
}

.hub-expiry-date {
    font-size: 24rpx;
    color: var(--text-sub);
    background: var(--border);
    padding: 6rpx 16rpx;
    border-radius: 100rpx;
}

/* Quota Card in Hub */
.hub-quota-card {
    background: var(--bg-main);
    border-radius: 32rpx;
    padding: 32rpx;
    margin: 0 32rpx 40rpx;
    border: 1rpx solid var(--border);
}

.quota-title-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24rpx;
}

.quota-title {
    font-size: 26rpx;
    color: var(--text-sub);
    font-weight: 600;
}

.quota-infinite-tag {
    font-size: 18rpx;
    font-weight: 800;
    color: var(--primary);
    background: rgb(46 95 233 / 10%);
    padding: 4rpx 12rpx;
    border-radius: 6rpx;
    letter-spacing: 1rpx;
}

.quota-infinite-box {
    display: flex;
    align-items: center;
    gap: 12rpx;
}

.quota-infinite-text {
    font-size: 40rpx;
    font-weight: 800;
    color: var(--text-main);
}

.infinite-sparkle {
    font-size: 32rpx;
    animation: bounce 2s infinite;
}

.hub-progress-section {
    width: 100%;
}

.hub-quota-labels {
    display: flex;
    justify-content: space-between;
    margin-top: 16rpx;
}

.hub-quota-used {
    font-size: 24rpx;
    font-weight: 700;
    color: var(--text-main);
}

.hub-quota-limit {
    font-size: 24rpx;
    color: var(--text-holder);
}

/* Benefit List */
.hub-benefit-list {
    display: flex;
    flex-direction: column;
    gap: 32rpx;
    margin: 0 32rpx 60rpx;
    padding: 0 8rpx;
}

.hub-benefit-item {
    display: flex;
    align-items: flex-start;
    gap: 24rpx;
    opacity: 0.5;
    transition: opacity 0.3s;
}

.hub-benefit-item.benefit-active {
    opacity: 1;
}

.benefit-info {
    display: flex;
    flex-direction: column;
}

.benefit-name {
    font-size: 28rpx;
    font-weight: 700;
    color: var(--text-main);
}

.benefit-sub {
    font-size: 22rpx;
    color: var(--text-sub);
    margin-top: 4rpx;
}

/* --- Modern Invite Sheet (Hybrid Style) --- */
.invite-sheet-content-v2 {
    padding: 10rpx 48rpx 30rpx !important;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    width: 100%;
}

.invite-hero {
    text-align: center;
    margin-bottom: 40rpx;
}

.invite-hero-title {
    font-size: 36rpx;
    font-weight: 800;
    color: var(--text-main);
    display: block;
    margin-bottom: 8rpx;
    letter-spacing: -0.5rpx;
}

.invite-hero-sub {
    font-size: 24rpx;
    color: var(--text-sub);
    font-weight: 500;
}

/* Code Display Card */
.code-display-card {
    width: 100%;
    background: linear-gradient(90deg, #fff 0%, #f0f7ff 100%);
    border-radius: 32rpx;
    padding: 40rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 40rpx;
    border: 2rpx solid rgb(46 95 233 / 12%);
    box-shadow: 0 4rpx 24rpx rgb(46 95 233 / 6%);
    transition: all 0.2s ease;
    position: relative;
    overflow: hidden;
    box-sizing: border-box;
}

.code-display-card:active {
    transform: scale(0.98);
    background: linear-gradient(90deg, #f5faff 0%, #e6f0ff 100%);
}

.code-label {
    font-size: 22rpx;
    color: var(--text-sub);
    font-weight: 600;
    margin-bottom: 12rpx;
}

.code-main-row {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 12rpx;
    width: 100%;
}

.code-text {
    font-family: -apple-system-monospace, 'SF Mono', 'Roboto Mono', monospace;
    font-size: 60rpx;
    font-weight: 800;
    color: var(--text-main);
    letter-spacing: 4rpx;
}

.code-hint {
    font-size: 22rpx;
    color: var(--primary-mid);
    font-weight: 600;
    opacity: 0.8;
}

/* Redemption Section */
.redeem-container {
    width: 100%;
}

.redeem-title {
    font-size: 28rpx;
    font-weight: 700;
    color: var(--text-main);
    margin-bottom: 20rpx;
    display: block;
    margin-left: 8rpx;
}

.redeem-input-group {
    background: #fff;
    border: 2rpx solid var(--border);
    border-radius: 24rpx;
    height: 100rpx;
    display: flex;
    align-items: center;
    padding: 0 16rpx 0 32rpx;
    transition: all 0.3s ease;
    box-shadow: 0 4rpx 12rpx rgb(0 0 0 / 2%);
    box-sizing: border-box;
    width: 100%;
}

.redeem-input-group:focus-within {
    border-color: var(--primary);
    box-shadow: 0 4rpx 16rpx rgb(46 95 233 / 10%);
}

.redeem-input {
    flex: 1;
    height: 100%;
    font-size: 30rpx;
    color: var(--text-main);
    font-weight: 600;
}

.redeem-placeholder {
    color: #cbd5e1;
    font-weight: 400;
}


/* Active State for Button */

.redeem-input-group.has-value .redeem-action-btn:active {
    transform: scale(0.96);
    opacity: 0.9;
}

/* Contact Author Section */
.contact-author-section {
    background: #fff;
    border-radius: 24rpx;
    padding: 32rpx;
    border: 1rpx solid var(--border);
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.2s;
}

.contact-author-section:active {
    background: var(--bg-main);
}

.contact-left {
    display: flex;
    align-items: center;
    gap: 20rpx;
}

.contact-icon-box {
    width: 72rpx;
    height: 72rpx;
    background: #f0f7ff;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
}

.contact-info {
    display: flex;
    flex-direction: column;
}

.contact-title {
    font-size: 28rpx;
    font-weight: 700;
    color: var(--text-main);
}

.contact-subtitle {
    font-size: 22rpx;
    color: var(--text-sub);
    margin-top: 2rpx;
}


/* Hub Action Bar */
.hub-action-bar {
    display: flex;
    gap: 20rpx;
    margin: 0 32rpx calc(48rpx + env(safe-area-inset-bottom));
}

.hub-action-left, .hub-action-right {
    flex: 1;
    height: 96rpx;
    border-radius: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.1s;
}

.hub-action-left {
    background: var(--border);
}

.hub-action-right {
    background: var(--primary);
    box-shadow: 0 8rpx 20rpx rgb(46 95 233 / 20%);
}

.hub-action-left.full-width {
    flex: 1;
}

.action-btn-text {
    font-size: 28rpx;
    font-weight: 700;
}

.action-btn-text.secondary {
    color: #475569;
}

.action-btn-text.primary {
    color: #fff;
}

.hub-action-left:active, .hub-action-right:active {
    transform: scale(0.97);
}

@keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-6rpx); }
}

@import "./profile-sheet.wxss";

/* --- 8. Professional Member Hub V2 --- */
.member-hub-content.v2-design {
  background: var(--bg-page);
  padding-bottom: env(safe-area-inset-bottom);
}

.hub-status-section {
  margin: 24rpx 32rpx;
  padding: 40rpx;
  border-radius: 40rpx;
  background: var(--bg-card);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border);
  position: relative;
  overflow: hidden;
}

/* Tiered Background Accents */
.hub-status-section::before {
  content: '';
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  z-index: 0;
  opacity: 0.1;
}

.tier-1::before { background: radial-gradient(circle, var(--primary) 0%, transparent 70%); }
.tier-2::before { background: radial-gradient(circle, #5182f6 0%, transparent 70%); }
.tier-3::before { background: radial-gradient(circle, var(--warning) 0%, transparent 70%); opacity: 0.15; }

.status-main-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  position: relative;
  z-index: 1;
  margin-bottom: 32rpx;
}

.tier-identity {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tier-name {
  font-size: 40rpx;
  font-weight: 900;
  color: var(--text-main);
  letter-spacing: -0.5rpx;
}

.status-date {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  background: var(--primary-light);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.date-label {
  font-size: 18rpx;
  color: var(--text-holder);
  text-transform: uppercase;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.date-value {
  font-size: 26rpx;
  font-weight: 800;
  color: var(--primary);
  margin-top: 2rpx;
}

/* Visual Quota Display */
.hub-quota-visual {
  background: var(--bg-main);
  border-radius: 24rpx;
  padding: 24rpx;
  position: relative;
  z-index: 1;
}

.visual-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.visual-title {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--text-sub);
}

.visual-badge {
  font-size: 18rpx;
  font-weight: 800;
  background: var(--primary);
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.visual-infinite {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.infinite-text {
  font-size: 48rpx;
  font-weight: 900;
  color: var(--text-main);
}

.sparkle-v2 {
  font-size: 32rpx;
  animation: pulse-glow 2s infinite;
}

.visual-progress-bar {
  height: 12rpx;
  background: var(--border);
  border-radius: 100rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.visual-progress-fill {
  height: 100%;
  background: linear-gradient(to right, var(--primary-mid), var(--primary));
  border-radius: 100rpx;
  transition: width 1s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.visual-progress-fill.exhausted {
  background: #ef4444;
}

.visual-stats {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-item {
  font-size: 24rpx;
  color: var(--text-holder);
}

.stat-num {
  font-weight: 800;
  color: var(--text-main);
}

.stat-sep {
  color: var(--border);
}

/* Privilege Grid */
.hub-privilege-section {
  padding: 0 32rpx;
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 20rpx;
  font-weight: 800;
  color: var(--text-holder);
  letter-spacing: 2rpx;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.privilege-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.privilege-card {
  background: #fff;
  border: 1rpx solid var(--border);
  border-radius: 32rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  position: relative;
  transition: all 0.2s;
}

.privilege-card.full-width {
  grid-column: span 2;
  flex-direction: row;
  align-items: center;
  gap: 32rpx;
}

.privilege-icon-box {
  width: 64rpx;
  height: 64rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.blue { background: #eff6ff; }
.purple { background: #f5f3ff; }
.gold { background: #fffbeb; }
.indigo { background: #eef2ff; }

.p-name {
  font-size: 28rpx;
  font-weight: 800;
  color: var(--text-main);
  display: block;
}

.p-desc {
  font-size: 20rpx;
  color: var(--text-sub);
  line-height: 1.4;
  margin-top: 4rpx;
  display: block;
}

.unlock-indicator {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  font-size: 20rpx;
  opacity: 0.3;
}

/* V2 Actions */
.hub-v2-actions {
  display: flex;
  gap: 20rpx;
  padding: 0 32rpx 40rpx;
}

.action-btn-v2 {
  flex: 1;
  height: 100rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 800;
  transition: all 0.2s;
}

.action-btn-v2.secondary {
  background: var(--border);
  color: #475569;
}

.action-btn-v2.primary {
  background: var(--primary);
  color: #fff;
  box-shadow: 0 12rpx 24rpx rgb(46 95 233 / 25%);
}

.action-btn-v2:active {
  transform: scale(0.96);
  opacity: 0.9;
}

@keyframes pulse-glow {
  0%, 100% { opacity: 1; transform: scale(1); filter: drop-shadow(0 0 2rpx gold); }
  50% { opacity: 0.7; transform: scale(1.1); filter: drop-shadow(0 0 8rpx gold); }
}

/* --- 6. Author Contact Card --- */
.author-contact-card {
    background: #fff;
    border-radius: 28rpx;
    padding: 32rpx;
    box-shadow: 0 8rpx 20rpx rgb(0 0 0 / 3%);
