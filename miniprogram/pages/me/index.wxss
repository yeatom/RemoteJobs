.qr-code-image-sheet {
    width: 100%;
    display: block;
}

.qr-hint {
    margin-top: 0rpx;
    font-size: 24rpx;
    color: var(--text-holder);
}

.sheet-close {
    font-size: 32rpx;
    color: #cbd5e1;
    padding: 10rpx;
}
/* --- Product Selection --- */
