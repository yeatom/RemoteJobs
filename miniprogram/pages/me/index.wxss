.page {
    min-height: 100vh;
    background: #f5f7fb;
    box-sizing: border-box;
    padding: 40rpx 32rpx;
}

.content {
    margin-top: 40rpx;
}

.title {
    font-size: 44rpx;
    font-weight: 600;
    color: #1f2933;
}

.desc {
    margin-top: 16rpx;
    font-size: 28rpx;
    color: #6b7280;
}

.me-card {
    background: #ffffff;
    border-radius: 24rpx;
    padding: 28rpx;
    box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.04);
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
    tap-highlight-color: transparent;
}

.user-row {
    display: flex;
    align-items: center;
}

.avatar,
.avatar-placeholder {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 18rpx;
    overflow: hidden;
    cursor: pointer;
}

.avatar {
    display: block;
}

.avatar-placeholder {
    background-color: #e0e0e0;
    cursor: pointer;
}

.user-text {
    flex: 1;
    height: 100rpx;
    display: flex;
    align-items: center;
}

.nickname-container {
    display: flex;
    align-items: center;
    gap: 12rpx;
}

.nickname {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    line-height: 1.2;
    margin: 0;
    padding: 0;
}

.member-badge {
    padding: 4rpx 12rpx;
    border-radius: 12rpx;
    font-size: 20rpx;
    font-weight: 600;
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.member-text {
    font-size: 20rpx;
    font-weight: 600;
    color: #ffffff;
}

.nickname-login {
    color: #1d4ed8;
}

.phone-auth-name-btn {
    background: transparent;
    padding: 0;
    margin: 0;
    border: none;
    display: inline-flex;
    align-items: center;
    justify-content: flex-start;
    height: auto;
    width: auto;
    line-height: 1.2;
}

.phone-auth-name-btn::after {
    border: none;
}

.me-list {
    margin-top: 24rpx;
    background: #ffffff;
    border-radius: 24rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.04);
}

.me-item {
    padding: 28rpx;
    position: relative;
}

.me-item::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 20rpx;
    right: 20rpx;
    height: 1rpx;
    background: #f0f0f0;
}

.me-item:last-child::after {
    display: none;
}

.me-item-text {
    font-size: 30rpx;
    color: #333;
}

/* --- Language bottom sheet (same motion pattern as favorites) --- */
.language-sheet-mask {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.35);
    z-index: 2399;
    opacity: 0;
    transition: opacity 0.25s ease;
}

.language-sheet-mask-open {
    opacity: 1;
}

.language-sheet {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: auto;
    background: #ffffff;
    border-top-left-radius: 24rpx;
    border-top-right-radius: 24rpx;
    transform: translateY(100%);
    transition: transform 0.25s ease;
    z-index: 2400;
    display: flex;
    flex-direction: column;
    padding-bottom: 10rpx;
}

.language-sheet-open {
    transform: translateY(0);
}

/* remove unused handle styles */
.language-sheet-handle {
    display: none;
}

.language-sheet-content {
    padding: 0 32rpx 32rpx;
    padding-top: 24rpx;
}

.language-item {
    height: 96rpx;
    border-radius: 18rpx;
    background: #f3f4f6;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 18rpx;
}

.language-item-text {
    font-size: 30rpx;
    font-weight: 600;
    color: #111827;
    display: flex;
    align-items: center;
    gap: 8rpx;
}

.language-item view.language-item-text {
    margin-left: 30rpx;
}

.member-star-icon {
    width: 57rpx;
    height: 57rpx;
    display: inline-block;
    flex-shrink: 0;
    margin: 0 6rpx;
    margin-left: -10rpx;
}

.language-item-active {
    background: rgba(29, 78, 216, 0.10);
    border: 2rpx solid #1d4ed8;
}

.language-item-active .language-item-text {
    color: #1d4ed8;
}

/* Invite code bottom sheet */
.invite-sheet-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    z-index: 2300;
    opacity: 0;
    transition: opacity 0.25s ease;
}

.invite-sheet-mask-open {
    opacity: 1;
}

.invite-sheet {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    max-height: 80vh; /* Maximum height */
    background: #ffffff;
    border-top-left-radius: 24rpx;
    border-top-right-radius: 24rpx;
    transform: translateY(100%);
    transition: transform 0.25s ease;
    z-index: 2400;
    display: flex;
    flex-direction: column;
    padding-bottom: 10rpx;
}

.invite-sheet-open {
    transform: translateY(0);
}

.invite-sheet-content {
    padding: 24rpx 32rpx 32rpx;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 32rpx;
}

.invite-section {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
}

.invite-section-title {
    font-size: 30rpx;
    font-weight: 600;
    color: #1f2933;
}

.invite-code-display {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16rpx 20rpx;
    background: #f3f4f6;
    border-radius: 12rpx;
    min-height: 60rpx;
}

.invite-code-text {
    font-size: 28rpx;
    font-weight: 600;
    color: #1d4ed8;
    font-family: 'Courier New', monospace;
    flex: 1;
}

.invite-code-copy {
    font-size: 26rpx;
    color: #6b7280;
    margin-left: 16rpx;
}

.invite-code-input {
    padding: 16rpx 20rpx;
    background: #f3f4f6;
    border-radius: 12rpx;
    font-size: 28rpx;
    border: none;
    outline: none;
    min-height: 60rpx;
}

.invite-apply-btn {
    margin-top: 16rpx;
    padding: 16rpx 24rpx;
    background: #1d4ed8;
    color: #ffffff;
    border-radius: 12rpx;
    font-size: 28rpx;
    font-weight: 600;
    border: none;
    outline: none;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60rpx;
}

.invite-apply-btn:active {
    background: #1e40af;
}

/* --- User Profile Sheet (from bottom, same as restore-sheet) --- */
/* 使用公共样式 bottom-sheet, bottom-sheet-mask, bottom-sheet-header, bottom-sheet-content */
/* 只保留特定样式 */

.profile-sheet-header {
    justify-content: center;
    padding: 24rpx 32rpx;
}

.profile-sheet-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #1f2933;
}

/* profile-sheet-content 使用公共样式 bottom-sheet-content */
.profile-sheet-content {
    padding-top: 24rpx;
}

.profile-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 32rpx 0;
    border-bottom: 1rpx solid #f3f4f6;
    position: relative;
}

.profile-item:last-child {
    border-bottom: none;
}

.profile-item:active {
    background-color: #f9fafb;
    margin: 0 -32rpx;
    padding-left: 32rpx;
    padding-right: 32rpx;
}

.profile-item-left {
    flex: 1;
    display: flex;
    align-items: center;
}

.profile-item-label {
    font-size: 30rpx;
    color: #1f2933;
    font-weight: 500;
    line-height: 1.5;
}

.profile-item-right {
    display: flex;
    align-items: center;
    gap: 16rpx;
}

.profile-item-right-center {
    justify-content: flex-end;
    flex: 1;
    align-items: center;
    display: flex;
}

.profile-item-value-wrapper {
    display: flex;
    align-items: center;
    gap: 8rpx;
}

.profile-item-value {
    font-size: 28rpx;
    color: #6b7280;
    line-height: 1.5;
    display: flex;
    align-items: center;
}

.profile-member-active {
    color: #1d4ed8;
    font-weight: 500;
}

.profile-member-expired {
    color: #9ca3af;
}

.profile-item-arrow {
    font-size: 32rpx;
    color: #9ca3af;
    font-weight: 300;
}

.profile-avatar-preview {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    border: 2rpx solid #e5e7eb;
}

.profile-avatar-placeholder {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background-color: #e0e0e0;
}

.profile-edit-icon {
    font-size: 26rpx;
    color: #1d4ed8;
    padding: 8rpx 16rpx;
    border-radius: 8rpx;
    background-color: #e5f0ff;
}

.profile-nickname-input {
    flex: 1;
    padding: 12rpx 16rpx;
    background: #f3f4f6;
    border-radius: 8rpx;
    font-size: 28rpx;
    color: #1f2933;
    min-width: 300rpx;
}

.profile-edit-actions {
    display: flex;
    gap: 16rpx;
    margin-left: 16rpx;
}

.profile-edit-btn {
    padding: 8rpx 20rpx;
    border-radius: 8rpx;
    font-size: 26rpx;
    font-weight: 500;
}

.profile-edit-cancel {
    color: #6b7280;
    background-color: #f3f4f6;
}

.profile-edit-save {
    color: #ffffff;
    background-color: #1d4ed8;
}

.profile-edit-cancel:active {
    background-color: #e5e7eb;
}

.profile-edit-save:active {
    background-color: #1e40af;
}
