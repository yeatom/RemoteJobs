    text-transform: uppercase;
}
.type-plan .prod-tag { background: #2e5fe9; color: #fff; }
.type-topup .prod-tag { background: #3b82f6; color: #fff; } /* Blue Tag */

.prod-upper { display: flex; flex-direction: column; gap: 8rpx; }
.prod-name { font-size: 30rpx; font-weight: 700; color: #0f172a; white-space: normal; line-height: 1.2; }
.prod-price { font-size: 40rpx; font-weight: 700; color: #0f172a; }
.curr { font-size: 24rpx; margin-right: 4rpx; font-weight: 700; }

.prod-lower { display: flex; flex-direction: column; gap: 4rpx; }
.prod-points { display: flex; align-items: baseline; }
.pts-val { font-size: 32rpx; font-weight: 700; color: #2e5fe9; } 
.type-topup .pts-val { color: #2563eb; } /* Blue 600 */
.pts-unit { font-size: 20rpx; color: #64748b; font-weight: 600; margin-left: 6rpx; }
.prod-days { font-size: 20rpx; color: #94a3b8; font-weight: 600; }

/* Selection Checkmark */
.selection-check {
    position: absolute;
    bottom: 24rpx;
    right: 24rpx;
    width: 32rpx;
    height: 32rpx;
    border-radius: 50%;
    background: #cbd5e1;
    display: none;
    align-items: center;
    justify-content: center;
}
.selected .selection-check {
    display: flex;
    background: #2e5fe9;
}
.type-topup.selected .selection-check { background: #3b82f6; } /* Blue Check */
.selection-check::after {
    content: '';
    width: 10rpx;
    height: 18rpx;
    border: solid #fff;
    border-width: 0 4rpx 4rpx 0;
    transform: rotate(45deg);
    margin-top: -4rpx;
}

/* Detail Box */
.selection-detail-box {
    margin: 12rpx 32rpx 32rpx; /* Increased bottom margin: 12rpx -> 32rpx */
    background: #f1f5f9; /* Slate 100 - cleaner than semi-transparent */
    padding: 24rpx;
    border-radius: 20rpx;
    border: 1rpx solid #e2e8f0;
}
.detail-desc {
    font-size: 24rpx;
    color: #64748b;
    line-height: 1.5;
    display: block;
    margin-bottom: 16rpx;
}
.privileges-notes {
    display: flex;
    flex-direction: column;
    gap: 8rpx;
}
.note-item { 
    font-size: 22rpx; 
    color: #1e293b; 
    font-weight: 600; 
    display: flex;
    align-items: center;
}
.note-check {
    color: #2e5fe9;
    margin-right: 8rpx;
    font-size: 24rpx;
}

/* Footer */
.bottom-spacer {
    height: 3rpx;
    width: 100%;
}

.sheet-footer-v3 {
    background: #fff;
    box-shadow: 0 -10rpx 40rpx rgba(0,0,0,0.05);
    padding: 23rpx 32rpx 19rpx 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 99;
