}

.qr-code-image {
    width: 100%;
    height: 100%;
}

/* --- 7. Contact Author Sheet --- */
.author-sheet-content {
    background: #fff;
    border-radius: 40rpx 40rpx 0 0;
    padding: 0;
}

.author-sheet-body {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 10rpx 0 15rpx;
}

.author-sheet-body .author-slogan {
    font-size: 28rpx;
    color: var(--text-sub);
    margin-bottom: 10rpx;
    text-align: center;
