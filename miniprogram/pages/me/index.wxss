.code-label {
    font-size: 22rpx;
    color: #64748b;
    font-weight: 600;
    margin-bottom: 12rpx;
}

.code-main-row {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 12rpx;
    width: 100%;
}

.code-text {
    font-family: -apple-system-monospace, 'SF Mono', 'Roboto Mono', monospace;
    font-size: 60rpx;
    font-weight: 800;
    color: #1e293b;
    letter-spacing: 4rpx;
}

.code-hint {
    font-size: 22rpx;
    color: #3b82f6;
    font-weight: 600;
    opacity: 0.8;
}

/* Redemption Section */
.redeem-container {
    width: 100%;
}

.redeem-title {
    font-size: 28rpx;
    font-weight: 700;
    color: #0f172a;
    margin-bottom: 20rpx;
    display: block;
    margin-left: 8rpx;
}

.redeem-input-group {
    background: #ffffff;
    border: 2rpx solid #e2e8f0;
    border-radius: 24rpx;
    height: 100rpx;
    display: flex;
    align-items: center;
