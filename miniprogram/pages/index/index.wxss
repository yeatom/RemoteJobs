/** index.wxss - remote jobs list **/

page {
  background-color: #f5f7fb;
  height: 100%;
  overflow: hidden; /* prevent outer page from scrolling */
  /* hide page-level scrollbars */
  -ms-overflow-style: none;
  scrollbar-width: none;
}

page::-webkit-scrollbar {
  display: none;
}

.page {
  position: relative; /* 为绝对定位的filter-dropdown提供定位上下文 */
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 40rpx 32rpx 0;
  box-sizing: border-box;
  overflow: hidden;
}

.page-header {
  margin-bottom: 16rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

/* header filter toggle no longer used visually (keep markup safe) */
.page-header .filter-toggle {
  display: none;
}

/* miniprogram/pages/index/index.wxss */

/* --- Unified search right-side buttons (region + filter) --- */
.search-pill {
  height: 45rpx;
  padding: 0 12rpx;
  border-radius: 18rpx;
  background-color: #e5f0ff;
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  flex: 0 0 auto;
}

.search-pill-text {
  font-size: 22rpx;
  color: #1d4ed8;
  line-height: 1;
}

/* single source of truth for the triangle shape + size + position (NO animation) */
.search-pill-triangle {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #1d4ed8;

  /* size (increase so it's visible) */
  border-left-width: 8rpx;
  border-right-width: 8rpx;
  border-top-width: 8rpx;

  /* position (slightly less vertical offset now that it's bigger) */
  margin-top: 12rpx;
  margin-left: 6rpx;

  /* disable any transform animation */
  transition: none;

  /* rotation (default) */
  transform: rotate(var(--pill-rot, -45deg));
}

.search-pill-triangle-up {
  --pill-rot: 0deg;
}

/* Restore region dropdown popup styles (mask + dropdown + triangle) */

/* Keep dropdown triangles visible (do not hide .filter-triangle/.filter-triangle-up) */
.filter-triangle,
.filter-triangle-up {
  display: inline-block;
}

.filter-triangle {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #1d4ed8;
  transition: transform 0.2s ease;
}

.filter-triangle-up {
  transform: rotate(180deg);
}

/* mask for dropdown */
.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  background-color: transparent;
  opacity: 0;
  transition: opacity 0.25s ease;
}

.filter-mask-open {
  opacity: 1;
}

/* dropdown list */
.filter-dropdown {
  position: absolute;
  top: 120rpx;
  right: 32rpx;
  width: auto;
  min-width: 160rpx;
  z-index: 1000;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 6rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1), 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(29, 78, 216, 0.1);
}

.filter-option {
  background-color: transparent; /* 默认透明背景 */
  padding: 18rpx 24rpx; /* Adjust padding for separator */
  font-size: 26rpx;
  color: #1d4ed8; /* 与filter-label相同的深蓝色，保持统一 */
  transition: background-color 0.2s ease; /* 平滑过渡动画 */
  cursor: pointer; /* 鼠标指针 */
  position: relative; /* Needed for pseudo-element positioning */
}

.filter-option::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 24rpx; /* Horizontal padding */
  right: 24rpx; /* Horizontal padding */
  height: 1rpx;
  background-color: rgba(29, 78, 216, 0.1); /* Light blue separator */
}

.filter-option:active {
  background-color: #e5f0ff; /* 点击时的浅蓝色背景，与filter-toggle呼应 */
  color: #1d4ed8; /* 保持蓝色，与按钮文字颜色统一 */
}

.filter-option:last-child::after {
  display: none;
}

.search-bar {
  margin-top: -20rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.search-input {
  flex: 1;
  width: auto;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 18rpx;
  padding: 0 18rpx;
  background-color: #EDEDED;
}

.search-placeholder {
  color: #9ca3af;
  font-size: 24rpx;
  line-height: 64rpx;
}

.search-actions {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  flex: 0 0 auto;
}

/* Remove page-level .job-list rules; handled by components/job-list */
.job-list,
.job-list-content {
  /* intentionally left blank */
}

/* Favorites Full-Screen Drawer (replaces bottom sheet) **/

.favorites-drawer-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.35);
  z-index: 2499;
  opacity: 0;
  transition: opacity 0.25s ease;
}

.favorites-drawer-mask-open {
  opacity: 1;
}

.favorites-drawer {
  position: fixed;
  top: 0;
  right: -100%;
  width: 100%;
  height: 100%;
  background: #f5f7fb;
  z-index: 2500;
  transition: right 0.3s ease;
  display: flex;
  flex-direction: column;
  box-shadow: -2rpx 0 10rpx rgba(0, 0, 0, 0.1);
}

.favorites-drawer-open {
  right: 0;
}

.favorites-header {
  padding: 40rpx 32rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  position: relative;
  background: #ffffff;
}

/* Reuse the same back-hit/back-button idiom as detail page */
.favorites-header .back-hit {
  height: 80rpx;
  width: 96rpx;
  display: flex;
  align-items: center;
}

.favorites-header .back-button {
  width: 16rpx;
  height: 16rpx;
  border-left: 5rpx solid #111827;
  border-bottom: 5rpx solid #111827;
  transform: rotate(45deg);
  margin-left: 40rpx;
}

.favorites-title {
  position: absolute;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  color: #111827;
}

.favorites-drawer-list {
  flex: 1;
  height: 0;
  padding: 0 32rpx 24rpx;
  box-sizing: border-box;
}

