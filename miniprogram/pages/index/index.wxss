/** index.wxss - remote jobs list **/

page {
  background-color: #f5f7fb;
  height: 100%;
  overflow: hidden; /* prevent outer page from scrolling */
  /* hide page-level scrollbars */
  -ms-overflow-style: none;
  scrollbar-width: none;
}

page::-webkit-scrollbar {
  display: none;
}

.page {
  position: relative; /* 为绝对定位的filter-dropdown提供定位上下文 */
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 40rpx 32rpx 0;
  box-sizing: border-box;
  overflow: hidden;
}

.page-header {
  margin-bottom: 16rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

/* header filter toggle no longer used visually (keep markup safe) */
.page-header .filter-toggle {
  display: none;
}

/* miniprogram/pages/index/index.wxss */

/* --- Unified search right-side buttons (region + filter) --- */
.search-pill {
  height: 45rpx;
  padding: 0 12rpx;
  border-radius: 18rpx;
  background-color: #e5f0ff;
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  flex: 0 0 auto;
}

.search-pill-text {
  font-size: 22rpx;
  color: #1d4ed8;
  line-height: 1;
}

/* single source of truth for the triangle shape + size + position (NO animation) */
.search-pill-triangle {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #1d4ed8;

  /* size (increase so it's visible) */
  border-left-width: 8rpx;
  border-right-width: 8rpx;
  border-top-width: 8rpx;

  /* position (slightly less vertical offset now that it's bigger) */
  margin-top: 12rpx;
  margin-left: 6rpx;

  /* disable any transform animation */
  transition: none;

  /* rotation (default) */
  transform: rotate(var(--pill-rot, -45deg));
}

.search-pill-triangle-up {
  --pill-rot: 0deg;
}

/* Restore region dropdown popup styles (mask + dropdown + triangle) */

/* Keep dropdown triangles visible (do not hide .filter-triangle/.filter-triangle-up) */
.filter-triangle,
.filter-triangle-up {
  display: inline-block;
}

.filter-triangle {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #1d4ed8;
  transition: transform 0.2s ease;
}

.filter-triangle-up {
  transform: rotate(180deg);
}

/* mask for dropdown */
.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  background-color: transparent;
  opacity: 0;
  transition: opacity 0.25s ease;
}

.filter-mask-open {
  opacity: 1;
}

/* dropdown list */
.filter-dropdown {
  position: absolute;
  top: 120rpx;
  right: 32rpx;
  width: auto;
  min-width: 160rpx;
  z-index: 1000;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 6rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1), 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(29, 78, 216, 0.1);
}

.filter-option {
  background-color: transparent; /* 默认透明背景 */
  padding: 18rpx 24rpx; /* Adjust padding for separator */
  font-size: 26rpx;
  color: #1d4ed8; /* 与filter-label相同的深蓝色，保持统一 */
  transition: background-color 0.2s ease; /* 平滑过渡动画 */
  cursor: pointer; /* 鼠标指针 */
  position: relative; /* Needed for pseudo-element positioning */
}

.filter-option::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 24rpx; /* Horizontal padding */
  right: 24rpx; /* Horizontal padding */
  height: 1rpx;
  background-color: rgba(29, 78, 216, 0.1); /* Light blue separator */
}

.filter-option:active {
  background-color: #e5f0ff; /* 点击时的浅蓝色背景，与filter-toggle呼应 */
  color: #1d4ed8; /* 保持蓝色，与按钮文字颜色统一 */
}

.filter-option:last-child::after {
  display: none;
}

.search-bar {
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.search-input {
  flex: 1;
  width: auto;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 18rpx;
  padding: 0 18rpx;
  background-color: #EDEDED;
}

.search-placeholder {
  color: #9ca3af;
  font-size: 24rpx;
  line-height: 64rpx;
}

.search-actions {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  flex: 0 0 auto;
}

.job-list {
  flex: 1;
  height: 0; /* use flex: 1 with height: 0 to properly calculate available space */
  min-height: 0; /* allow flex item to shrink below content size */
  /* hide scrollbars inside main list */
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.job-list-content {
  /* padding-bottom is set dynamically via inline style based on device */
  min-height: 100%; /* ensure content fills scroll-view */
}

.no-more-container {
  position: relative;
  height: 0; /* 不占用正常布局空间 */
  min-height: 0;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding: 0;
  overflow: visible; /* 允许内容溢出显示 */
}

.no-more-text {
  font-size: 24rpx;
  color: #9ca3af;
  opacity: 0;
  transform: translateY(20rpx); /* 初始位置在容器下方 */
  transition: opacity 0.3s ease, transform 0.3s ease;
  white-space: nowrap;
}

.no-more-text.no-more-visible {
  opacity: 1;
  transform: translateY(0); /* 显示时回到正常位置 */
}

.job-list::-webkit-scrollbar {
  display: none;
}

.job-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 28rpx 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.04);
  margin-bottom: 24rpx;
}

.job-main {
  margin-bottom: 20rpx;
}

.job-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.job-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  flex: 1;
  margin-right: 16rpx;
}

.job-time {
  font-size: 24rpx;
  color: #9ca3af;
}

.job-company {
  font-size: 26rpx;
  color: #4b5563;
  margin-bottom: 16rpx;
}

.job-meta {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 4rpx;
}

.job-meta-item {
  margin-right: 6rpx;
}

.job-meta-dot {
  margin: 0 6rpx;
}

.job-tags {
  margin: 10rpx 0;
  white-space: nowrap;
  /* hide horizontal tag scroll bar */
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.job-tags::-webkit-scrollbar {
  display: none;
}

.job-tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 16rpx;
  height: 40rpx;
  margin-right: 12rpx;
  border-radius: 999rpx;
  background-color: #e5f0ff;
}

.job-tag-text {
  font-size: 22rpx;
  color: #1d4ed8;
}

.list-loading {
  text-align: center;
  color: #9ca3af;
  font-size: 24rpx;
  padding: 20rpx 0 10rpx;
}

/** Bottom Sheet Styles **/

.favorites-sheet-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.35);
  z-index: 2499;
  opacity: 0;
  transition: opacity 0.25s ease;
}

.favorites-sheet-mask-open {
  opacity: 1;
}

.favorites-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 83.33vh;
  background: #f5f7fb;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  transform: translateY(100%);
  transition: transform 0.25s ease;
  z-index: 2500;
  display: flex;
  flex-direction: column;
}

.favorites-sheet-open {
  transform: translateY(0);
}

.favorites-sheet-handle {
  width: 86rpx;
  height: 10rpx;
  border-radius: 999rpx;
  background: rgba(17, 24, 39, 0.15);
  margin: 16rpx auto 8rpx;
}

.favorites-sheet-list {
  flex: 1;
  height: 0;
  padding: 0 32rpx 24rpx;
  box-sizing: border-box;
}

.empty-favorites {
  padding: 120rpx 0;
  text-align: center;
  color: #9ca3af;
}
