/** index.wxss - remote jobs list **/

page {
  background-color: #f5f7fb;
  height: 100%;
  overflow: hidden; /* prevent outer page from scrolling */
  /* hide page-level scrollbars */
  -ms-overflow-style: none;
  scrollbar-width: none;
}

page::-webkit-scrollbar {
  display: none;
}

.page {
  position: relative; /* 为绝对定位的filter-dropdown提供定位上下文 */
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 40rpx 32rpx 0;
  box-sizing: border-box;
  overflow: hidden;
}

.page-header {
  margin-bottom: 16rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

/* header filter toggle no longer used visually (keep markup safe) */
.page-header .filter-toggle {
  display: none;
}

/* miniprogram/pages/index/index.wxss */

/* --- Unified search right-side buttons (region + filter) --- */
.search-pill {
  height: 45rpx;
  padding: 0 12rpx;
  border-radius: 18rpx;
  background-color: #e5f0ff;
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  flex: 0 0 auto;
  width: 84rpx; /* fixed width for both pills (fits '筛选' and 'Filter' + triangle) */
  justify-content: center;
}

.search-pill-text {
  font-size: 22rpx;
  color: #1d4ed8;
  line-height: 1;
  display: inline-block;
  max-width: 110rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* single source of truth for the triangle shape + size + position (NO animation) */
.search-pill-triangle {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #1d4ed8;

  /* size (increase so it's visible) */
  border-left-width: 8rpx;
  border-right-width: 8rpx;
  border-top-width: 8rpx;

  /* position (slightly less vertical offset now that it's bigger) */
  margin-top: 12rpx;
  margin-left: 8rpx;

  /* disable any transform animation */
  transition: none;

  /* rotation (default) */
  transform: rotate(var(--pill-rot, -45deg));
}

.search-pill-triangle-up {
  --pill-rot: 0deg;
}

/* Restore region dropdown popup styles (mask + dropdown + triangle) */

/* Keep dropdown triangles visible (do not hide .filter-triangle/.filter-triangle-up) */
.filter-triangle,
.filter-triangle-up {
  display: inline-block;
}

.filter-triangle {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #1d4ed8;
  transition: transform 0.2s ease;
}

.filter-triangle-up {
  transform: rotate(180deg);
}

/* mask for dropdown */
.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  background-color: transparent;
  opacity: 0;
  transition: opacity 0.25s ease;
  pointer-events: none;
}

.filter-mask-open {
  opacity: 1;
  pointer-events: auto;
}

/* dropdown list */
.tab-content-wrapper {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.filter-dropdown {
  position: absolute;
  top: 84rpx;
  right: 32rpx;
  width: auto;
  min-width: 160rpx;
  z-index: 1000;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 6rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1), 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(29, 78, 216, 0.1);
}

.filter-option {
  background-color: transparent; /* 默认透明背景 */
  padding: 18rpx 24rpx; /* Adjust padding for separator */
  font-size: 26rpx;
  color: #1d4ed8; /* 与filter-label相同的深蓝色，保持统一 */
  transition: background-color 0.2s ease; /* 平滑过渡动画 */
  cursor: pointer; /* 鼠标指针 */
  position: relative; /* Needed for pseudo-element positioning */
}

.filter-option::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 24rpx; /* Horizontal padding */
  right: 24rpx; /* Horizontal padding */
  height: 1rpx;
  background-color: rgba(29, 78, 216, 0.1); /* Light blue separator */
}

.filter-option:active {
  background-color: #e5f0ff; /* 点击时的浅蓝色背景，与filter-toggle呼应 */
  color: #1d4ed8; /* 保持蓝色，与按钮文字颜色统一 */
}

.filter-option:last-child::after {
  display: none;
}

.search-bar {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  position: relative;
  z-index: 1;
}

.jobs-tabs {
  display: flex;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 8rpx;
  margin: -22rpx 0 17rpx 0;
  gap: 8rpx;
  position: relative;
}

.tab-slider {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: calc((100% - 16rpx) / 3); /* (100% - 2 * 8rpx gap) / 3 tabs */
  height: calc(100% - 16rpx);
  background: #eef2ff;
  border-radius: 8rpx;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 0;
  /* Enable hardware acceleration for smooth tab switching */
  will-change: transform;
  transform: translate3d(0, 0, 0);
  -webkit-transform: translate3d(0, 0, 0);
}

.tab-slider-0 {
  transform: translate3d(0, 0, 0);
}

.tab-slider-1 {
  transform: translate3d(calc(100% + 8rpx), 0, 0);
}

.tab-slider-2 {
  transform: translate3d(calc(200% + 16rpx), 0, 0);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
  border-radius: 8rpx;
  font-weight: 600;
  position: relative;
  z-index: 1;
  color: #6b7280;
  transition: color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* When tab is active, show blue text */
.tab-active {
  color: #1d4ed8;
}
.jobs-swiper {
  flex: 1;
  min-height: 0;
  /* Enable hardware acceleration for smooth swiper animation */
  will-change: transform;
  transform: translate3d(0, 0, 0);
  -webkit-transform: translate3d(0, 0, 0);
}

/* Ensure swiper and its items fill remaining vertical space so inner scroll works */
swiper,
.jobs-swiper,
swiper-item,
.job-list-wrapper,
job-list {
  height: 100%;
  min-height: 0;
  /* Enable hardware acceleration for smooth transitions */
  will-change: transform;
  transform: translate3d(0, 0, 0);
  -webkit-transform: translate3d(0, 0, 0);
}

.search-input {
  flex: 1;
  width: auto;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 18rpx;
  padding: 0 18rpx;
  background-color: #EDEDED;
}

.search-placeholder {
  color: #9ca3af;
  font-size: 24rpx;
  line-height: 64rpx;
}

.search-actions {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  flex: 0 0 auto;
}

/* Remove page-level .job-list rules; handled by components/job-list */
.job-list,
.job-list-content {
  /* intentionally left blank */
}

/* Favorites Full-Screen Drawer (replaces bottom sheet) **/

.favorites-drawer-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.35);
  z-index: 2499;
  opacity: 0;
  transition: opacity 0.25s ease;
}

.favorites-drawer-mask-open {
  opacity: 1;
}

.favorites-drawer {
  position: fixed;
  top: 0;
  right: -100%;
  width: 100%;
  height: 100%;
  background: #f5f7fb;
  z-index: 2500;
  transition: right 0.3s ease;
  display: flex;
  flex-direction: column;
  box-shadow: -2rpx 0 10rpx rgba(0, 0, 0, 0.1);
}

.favorites-drawer-open {
  right: 0;
}

.favorites-header {
  padding: 40rpx 32rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  position: relative;
  background: #ffffff;
}

/* Reuse the same back-hit/back-button idiom as detail page */
.favorites-header .back-hit {
  height: 80rpx;
  width: 96rpx;
  display: flex;
  align-items: center;
}

.favorites-header .back-button {
  width: 16rpx;
  height: 16rpx;
  border-left: 5rpx solid #111827;
  border-bottom: 5rpx solid #111827;
  transform: rotate(45deg);
  margin-left: 40rpx;
}

.favorites-title {
  position: absolute;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  color: #111827;
}

.favorites-drawer-list {
  flex: 1;
  height: 0;
  padding: 0 32rpx 24rpx;
  box-sizing: border-box;
}

.job-list-wrapper {
  flex: 1;
  min-height: 0;
  /* allow job-list to control scrolling */
  overflow: visible;
}

/* Also add bottom padding so the tabbar doesn't cover the last items */
.job-list-wrapper {
  box-sizing: border-box;
}

job-list {
  /* no custom properties */
}

/* Featured tab subscription overlay */
.featured-tab-wrapper {
  position: relative;
}

/* Disable pointer events for search-bar and job-list when locked */
.featured-locked .search-bar,
.featured-locked .job-list-wrapper {
  pointer-events: none;
}

/* Overlay covers search-bar + job-list area */
.featured-overlay {
  position: absolute;
  top: 0;
  left: 0%;
  right: 0%;
  bottom: 0;
  background: 
      linear-gradient(to right, 
      rgba(245, 247, 251, 0) 0%,
      rgba(245, 247, 251, 0) 10%,
      rgba(245, 247, 251, 0) 30%,
      rgba(245, 247, 251, 0.1) 50%,
      rgba(245, 247, 251, 0) 70%,
      rgba(245, 247, 251, 0) 90%,
      rgba(245, 247, 251, 0) 100%
    ),
    linear-gradient(to bottom, 
      rgba(245, 247, 251, 0) 0%,
      rgba(245, 247, 251, 0.5) 5%,
      rgba(245, 247, 251, 0.6) 30%,
      rgba(245, 247, 251, 0.73) 50%,
      rgba(245, 247, 251, 0.6) 70%,
      rgba(245, 247, 251, 0.5) 95%,
      rgba(245, 247, 251, 0) 100%
    );
  mask-image: linear-gradient(to right, 
    transparent 0%,
    transparent 5%,
    rgba(0, 0, 0, 1) 10%,
    rgba(0, 0, 0, 1) 90%,
    transparent 95%,
    transparent 100%
  );
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  pointer-events: none;
}

.featured-overlay-text {
  font-size: 28rpx;
  color: #1d4ed8;
  font-weight: 600;
  padding: 16rpx 32rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(29, 78, 216, 0.2);
  pointer-events: auto;
}

/* Empty state for favorites tab */
.empty-favorites {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  z-index: 10;
}

.empty-favorites-text {
  font-size: 28rpx;
  color: #9ca3af;
}
