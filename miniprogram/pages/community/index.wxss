.page {
  min-height: 100vh;
  background: #f8fafc;
  padding-bottom: 40rpx;
}

/* --- 1. Category Nav --- */
.category-nav {
  white-space: nowrap;
  background: #ffffff;
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}

.nav-item {
  display: inline-block;
  padding: 12rpx 36rpx;
  margin: 0 16rpx;
  font-size: 28rpx;
  color: #64748b;
  background: #f1f5f9;
  border-radius: 100rpx;
  transition: all 0.3s;
}

.nav-item:first-child {
  margin-left: 32rpx;
}

.nav-item:last-child {
  margin-right: 32rpx;
}

.nav-item-active {
  background: #2e5fe9;
  color: #ffffff;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(46, 95, 233, 0.25);
}

.community-container {
  padding: 32rpx;
}

/* --- 2. Hero Section --- */
.hero-section {
  width: 100%;
  height: 400rpx;
  border-radius: 32rpx;
  position: relative;
  overflow: hidden;
  margin-bottom: 48rpx;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.1);
}

.hero-image {
  width: 100%;
  height: 100%;
}

.hero-overlay {
  position: absolute;
  left: 0; bottom: 0; right: 0;
  height: 70%;
  background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, transparent 100%);
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 32rpx;
}

.hero-tag {
  background: #fbbf24;
  color: #78350f;
  font-size: 18rpx;
  font-weight: 800;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  align-self: flex-start;
  margin-bottom: 16rpx;
}

.hero-title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.hero-desc {
  color: rgba(255,255,255,0.8);
  font-size: 24rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* --- 3. Articles List & Modern Cards --- */
.section-group {
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1e293b;
}

.section-all {
  font-size: 24rpx;
  color: #2e5fe9;
  font-weight: 600;
}

.article-grid {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.modern-card {
  background: #ffffff;
  border-radius: 28rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.03);
  border: 1rpx solid rgba(226, 232, 240, 0.6);
  display: flex;
  flex-direction: row; /* Horizontal layout */
  padding: 24rpx;
  transition: all 0.2s;
}

.modern-card:active {
  transform: scale(0.98);
  background: #f8fafc;
}

.card-image-box {
  width: 200rpx;
  height: 160rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.card-image {
  width: 100%;
  height: 100%;
}

.card-status-badge {
  position: absolute;
  top: 12rpx; left: 12rpx;
  font-size: 18rpx;
  font-weight: 700;
  color: #ffffff;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  backdrop-filter: blur(4px);
}

.status-active { background: rgba(16, 185, 129, 0.9); }
.status-ended { background: rgba(100, 116, 139, 0.9); }

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e293b;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-views {
  font-size: 22rpx;
  color: #94a3b8;
  display: flex;
  align-items: center;
}

/* --- Loading --- */
.loading-box {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #94a3b8;
  font-size: 26rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e2e8f0;
  border-top-color: #2e5fe9;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}
