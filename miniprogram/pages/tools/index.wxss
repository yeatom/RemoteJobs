.page {
  padding: 32rpx;
  background-color: #f8fafc;
  min-height: 100vh;
}

.header {
  margin-bottom: 48rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1e293b;
  display: block;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #64748b;
}

.tools-grid {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.tool-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 6rpx -1rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
}

.tool-card:active {
  transform: scale(0.98);
  background: #f1f5f9;
}

.icon-box {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.icon-box.blue { background: #eff6ff; }
.icon-box.purple { background: #f3e8ff; }
.icon-box.green { background: #f0fdf4; }

.tool-icon {
  width: 48rpx;
  height: 48rpx;
}

.tool-info {
  flex: 1;
}

.tool-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #0f172a;
  display: block;
  margin-bottom: 4rpx;
}

.tool-desc {
  font-size: 24rpx;
  color: #64748b;
}

.arrow {
  color: #cbd5e1;
  font-weight: 600;
}

.jd-input-box {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-top: -16rpx; /* Tuck under the card */
  margin-bottom: 16rpx;
  animation: slideDown 0.3s ease-out;
}

.jd-textarea {
  width: 100%;
  height: 200rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 16rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

.action-btn {
  background: #2563eb;
  color: white;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
}

@keyframes slideDown {
  from { opacity: 0; transform: translateY(-10rpx); }
  to { opacity: 1; transform: translateY(0); }
}
