.page {
  padding: 32rpx;
  background-color: #f8fafc;
  min-height: 100vh;
}

.header {
  margin-bottom: 48rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1e293b;
  display: block;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #64748b;
}

.tools-grid {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.tool-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 6rpx -1rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
}

.tool-card:active {
  transform: scale(0.98);
  background: #f1f5f9;
}

.icon-box {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.icon-box.blue { background: #eff6ff; }
.icon-box.purple { background: #f3e8ff; }
.icon-box.green { background: #f0fdf4; }

.tool-icon {
  width: 48rpx;
  height: 48rpx;
}

.tool-info {
  flex: 1;
}

.tool-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #0f172a;
  display: block;
  margin-bottom: 4rpx;
}

.tool-desc {
  font-size: 24rpx;
  color: #64748b;
}

.arrow {
  color: #cbd5e1;
  font-weight: 600;
}

/* Drawer Styles */
.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.drawer-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding-bottom: 35rpx;
  z-index: 1001;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  max-height: 85vh;
  display: flex;
  flex-direction: column;
}

.drawer-show {
  transform: translateY(0);
}

.drawer-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #f1f5f9;
}

.drawer-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1e293b;
}

.close-btn {
  font-size: 40rpx;
  color: #94a3b8;
  padding: 10rpx;
  line-height: 1;
}

.drawer-body {
  padding: 32rpx 32rpx 0;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item .label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #475569;
  margin-bottom: 16rpx;
}

.input, .textarea {
  width: 100%;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 48rpx;
  color: #0f172a;
}

.input {
  height: 78rpx; /* Line height 48rpx + 30rpx */
}

.textarea {
  height: 300rpx;
  padding: 15rpx 24rpx;
}

.placeholder {
  font-size: 28rpx;
  line-height: 48rpx;
  color: #94a3b8;
}

.submit-btn {
  background: #e2e8f0;
  color: #94a3b8;
  border-radius: 100rpx;
  font-size: 30rpx;
  font-weight: 700;
  margin: 35rpx auto 0;
  padding: 15rpx 0;
  width: 35%;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.submit-btn.active {
  background: linear-gradient(135deg, #4979fc 0%, #2e5fe9 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(46, 95, 233, 0.3);
}

.submit-btn.active:active {
  transform: scale(0.96);
  opacity: 0.9;
}
