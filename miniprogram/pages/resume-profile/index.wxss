/* miniprogram/pages/resume-profile/index.wxss */
.page {
  height: 100vh;
  background-color: #f8fafc; /* Softer background */
  display: flex;
  flex-direction: column;
}

/* Header Section */
.header-section {
  padding: 40rpx 40rpx 20rpx;
  background-color: #ffffff;
}

.page-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #111827;
  letter-spacing: -0.5px;
}

.tips-card {
  margin-top: 32rpx;
  background-color: #e5f0ff; /* Theme blue background */
  padding: 24rpx 32rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.tips-icon {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

.tips-text {
  font-size: 24rpx;
  color: #1d4ed8; /* Theme blue text */
  line-height: 1.4;
  font-weight: 500;
}

/* Body and Scroll View */
.resume-content {
  flex: 1;
  height: 0;
}

.resume-body {
  padding: 32rpx 40rpx;
}

.section-group {
  margin-bottom: 48rpx;
}

.section-group-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #64748b;
  margin-bottom: 20rpx;
  margin-left: 8rpx;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.section-header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-header-row .section-group-title {
  margin-bottom: 0;
}

/* Card Styling */
.card {
  background-color: #ffffff;
  border-radius: 28rpx;
  padding: 0 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
}

/* List Item Styling */
.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.list-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 30rpx;
  color: #334155;
  font-weight: 500;
}

.item-value {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.value-text {
  font-size: 30rpx;
  color: #111827;
  font-weight: 400;
  text-align: right;
  max-width: 350rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.placeholder-text {
  font-size: 30rpx;
  color: #94a3b8;
}

.arrow-icon {
  width: 14rpx;
  height: 14rpx;
  border-top: 3rpx solid #cbd5e1;
  border-right: 3rpx solid #cbd5e1;
  transform: rotate(45deg);
  margin-left: 8rpx;
}

/* Photo Item Specifics */
.photo-item {
  padding: 24rpx 0;
}

.avatar-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid #f8fafc;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #f1f5f9;
  border: 4rpx solid #f8fafc;
}

/* Add Button */
.add-btn {
  padding: 10rpx 20rpx;
  background-color: #eff6ff;
  border-radius: 12rpx;
}

.add-btn-text {
  font-size: 24rpx;
  color: #1d4ed8;
  font-weight: 600;
}

/* Education & Certificate Items */
.education-item, .certificate-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
}

.education-item:last-child, .certificate-item:last-child {
  border-bottom: none;
}

.edu-info {
  flex: 1;
}

.edu-school {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 4rpx;
}

.edu-details {
  font-size: 26rpx;
  color: #475569;
  margin-bottom: 8rpx;
}

.business-dir {
  color: #64748b;
  font-style: italic;
}

.edu-date {
  font-size: 24rpx;
  color: #64748b;
}

/* Tags Wrapper for Certificates */
.tags-wrapper {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 10rpx 8rpx;
}

.tag-item {
  background-color: #e5f0ff;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  transition: all 0.2s ease;
}

.tag-item:active {
  background-color: #d1e5ff;
  transform: scale(0.96);
}

.tag-text {
  font-size: 26rpx;
  color: #1d4ed8;
  font-weight: 500;
}

.tag-del {
  font-size: 32rpx;
  color: #1d4ed8;
  padding: 0 4rpx;
  line-height: 1;
  opacity: 0.6;
}

.empty-tags {
  width: 100%;
  padding: 40rpx 0;
  background-color: #ffffff;
  border-radius: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2rpx dashed #e2e8f0;
}

.empty-text {
  font-size: 28rpx;
  color: #94a3b8;
}

.cert-text {
  font-size: 30rpx;
  color: #111827;
  flex: 1;
}

.empty-state {
  padding: 60rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.empty-text {
  font-size: 28rpx;
  color: #94a3b8;
}

.bottom-safe-area {
  height: 80rpx;
}

.ai-message-value {
  width: 100%;
  justify-content: space-between;
}

.ai-message-text {
  text-align: left;
  max-width: 580rpx;
  white-space: normal;
  line-height: 1.6;
  font-size: 30rpx;
  color: #64748b;
}

.ai-message-picker {
  height: 60vh; /* 3/5 of screen height */
}

.ai-message-input-content {
  flex: 1;
  padding: 32rpx 40rpx;
  background-color:rgb(255, 255, 255);
}

.ai-message-textarea {
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  color: #111827;
  line-height: 1.6;
}

/* Drawer Styles */
.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.drawer-mask-show {
  visibility: visible;
  opacity: 1;
}

.drawer {
  position: fixed;
  top: 0;
  right: 0;
  width: 85%;
  height: 100%;
  background-color: #ffffff;
  z-index: 1001;
  transform: translateX(100%);
  transition: transform 0.3s ease;
  display: flex;
  flex-direction: column;
  box-shadow: -10rpx 0 30rpx rgba(0, 0, 0, 0.05);
}

.drawer-show {
  transform: translateX(0);
}

.drawer-header {
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f1f5f9;
}

.drawer-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
}

.drawer-close {
  font-size: 48rpx;
  color: #94a3b8;
  padding: 10rpx;
}

.drawer-content {
  flex: 1;
  padding: 40rpx;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #64748b;
  margin-bottom: 16rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 90rpx;
  background-color: #f8fafc;
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #111827;
}

.form-textarea {
  width: 100%;
  min-height: 320rpx;
  background-color: #f8fafc;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #111827;
  line-height: 1.6;
}

.optional-hint {
  font-size: 24rpx;
  color: #94a3b8;
  font-weight: 400;
  margin-left: 8rpx;
}

.picker-value {
  width: 100%;
  height: 90rpx;
  background-color: #f8fafc;
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #111827;
  display: flex;
  align-items: center;
}

.date-range-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.date-range-row .picker-value {
  flex: 1;
  justify-content: center;
  padding: 0;
}

.date-sep {
  color: #94a3b8;
  font-weight: 600;
}

.drawer-footer {
  padding: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  display: flex;
  gap: 24rpx;
  border-top: 1rpx solid #f1f5f9;
}

.delete-action {
  padding: 40rpx 0;
  text-align: center;
  margin-top: 20rpx;
}

.header-delete {
  padding: 10rpx;
  font-size: 28rpx;
  color: #94a3b8;
  font-weight: 400;
}

.delete-text {
  font-size: 28rpx;
  color: #ef4444;
}

.btn-delete {
  flex: 0.5;
  height: 100rpx;
  background-color: #fee2e2;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #dc2626;
  font-size: 32rpx;
  font-weight: 600;
}

/* Custom Picker Styles */
.picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.picker-mask-show {
  visibility: visible;
  opacity: 1;
}

.custom-picker {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ffffff;
  z-index: 2001;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  padding-bottom: env(safe-area-inset-bottom);
  max-height: 60vh;
  display: flex;
  flex-direction: column;
}

.custom-picker-show {
  transform: translateY(0);
}

.custom-picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #e5e7eb;
  position: relative;
}

.custom-picker-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2933;
  line-height: 1;
}

.custom-picker-cancel {
  font-size: 28rpx;
  color: #64748b;
  padding: 10rpx 20rpx;
}

.custom-picker-confirm {
  font-size: 28rpx;
  color: #1d4ed8;
  font-weight: 600;
  padding: 10rpx 20rpx;
}

.header-right-btns {
  display: flex;
  align-items: center;
}

.btn-present {
  font-size: 26rpx;
  color: #64748b;
  background: #f1f5f9;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  margin-right: 10rpx;
}

.custom-picker-close {
  font-size: 40rpx;
  color: #94a3b8;
  padding: 10rpx;
}

.custom-picker-body {
  flex: 1;
  padding: 20rpx 0;
}

.picker-option {
  padding: 32rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: background-color 0.2s;
}

.picker-option:active {
  background-color: #f8fafc;
}

.picker-option-active .option-text {
  color: #1d4ed8;
  font-weight: 600;
}

.option-text {
  font-size: 30rpx;
  color: #334155;
}

.check-icon {
  width: 12rpx;
  height: 24rpx;
  border-right: 4rpx solid #1d4ed8;
  border-bottom: 4rpx solid #1d4ed8;
  transform: rotate(45deg);
}

/* Custom Date Picker Specifics */
.custom-picker-cancel, .custom-picker-confirm {
  /* 使用 header 通用样式 */
}

.picker-view-container {
  padding: 20rpx 0;
}

.picker-column-item {
  line-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #1e293b;
}
