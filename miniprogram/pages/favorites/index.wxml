<!--miniprogram/pages/favorites/index.wxml-->
<view class="favorites-page">
  <view class="favorites-header">
    <view class="back-button" bindtap="goBack">←</view>
    <text class="favorites-title">我收藏的岗位</text>
  </view>

  <block wx:if="{{loading}}">
    <view class="loading">加载中...</view>
  </block>

  <block wx:elif="{{favorites.length === 0}}">
    <view class="empty-state">暂无收藏岗位</view>
  </block>

  <scroll-view wx:else class="favorites-list" scroll-y="true">
    <block wx:for="{{favorites}}" wx:key="jobId">
      <view class="favorite-item">
        <text class="favorite-title">{{item.title}}</text>
        <view class="favorite-meta">
          <text wx:if="{{item.team}}">{{item.team}}</text>
          <text wx:if="{{item.salary}}" class="favorite-salary">{{item.salary}}</text>
        </view>
      </view>
    </block>
  </scroll-view>
</view>

