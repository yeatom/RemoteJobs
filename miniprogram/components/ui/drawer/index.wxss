.ui-drawer-mask {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.ui-drawer-mask.show {
  opacity: 1;
  visibility: visible;
}

.ui-drawer-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  z-index: 1001;
  transform: translateY(100%);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.ui-drawer-container.show {
  transform: translateY(0);
}

.ui-drawer-header {
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 36rpx;
  position: relative;
  flex-shrink: 0;
}

.ui-drawer-title {
  position: absolute;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-main, #1e293b);
  z-index: 1;
  pointer-events: none;
}

.ui-drawer-header-left, .ui-drawer-header-right {
  min-width: 80rpx;
  display: flex;
  align-items: center;
  flex-shrink: 0;
  z-index: 5;
  position: relative;
}

.ui-drawer-header-right {
  justify-content: flex-end;
}

.ui-drawer-close {
  width: 60rpx;
  height: 60rpx;
  background: var(--bg-page, #f8fafc);
  border-radius: 50%;
  font-size: 32rpx;
  color: var(--text-sub, #64748b);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.ui-drawer-close:active {
  background: var(--divider, #e2e8f0);
}

.ui-drawer-close.hidden {
  visibility: hidden;
  pointer-events: none;
}

.ui-drawer-confirm-btn {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--primary, #2e5fe9);
  padding: 12rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.ui-drawer-confirm-btn.disabled {
  color: var(--text-holder, var(--text-holder)); /* text-holder */
}

.ui-drawer-confirm-btn.loading {
  opacity: 0.6;
}

.ui-drawer-loading-icon {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid var(--primary, #2e5fe9);
  border-top-color: transparent;
  border-radius: 50%;
  animation: ui-drawer-spin 0.8s linear infinite;
}

@keyframes ui-drawer-spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.ui-drawer-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  -webkit-overflow-scrolling: touch;
  /* Fix: Override scroll-view default 100% height to allow auto-sizing */
  height: auto !important;
  /* Fix: Ensure scrolling happens when content exceeds limit, instead of stretching parent */
  max-height: calc(90vh - 110rpx - env(safe-area-inset-bottom));
}
