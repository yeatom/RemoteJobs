/* miniprogram/components/job-list/index.wxss */

.job-list {
  /* Works both inside flex containers and normal containers */
  width: 100%;
  height: 100%;
  min-height: 0;
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.job-list::-webkit-scrollbar {
  display: none;
}

.job-list-content {
  min-height: 100%;
  box-sizing: border-box;
  padding: 0;
}

.job-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 28rpx 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.04);
  margin-bottom: 24rpx;
}

.job-main {
  margin-bottom: 0;
}

.job-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.job-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  flex: 1;
  margin-right: 16rpx;
}

.job-time {
  font-size: 24rpx;
  color: #9ca3af;
}

.job-meta {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 4rpx;
}

.job-meta-item {
  margin-right: 6rpx;
}

.job-meta-dot {
  margin: 0 6rpx;
}

.job-tags {
  margin-top: 15rpx;
  margin-bottom: 5rpx;
  white-space: nowrap;
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.job-tags::-webkit-scrollbar {
  display: none;
}

.job-tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 16rpx;
  height: 40rpx;
  margin-right: 12rpx;
  border-radius: 999rpx;
  background-color: #e5f0ff;
}

.job-tag-text {
  font-size: 22rpx;
  color: #1d4ed8;
}

.list-loading {
  text-align: center;
  color: #9ca3af;
  font-size: 24rpx;
  padding: 20rpx 0 10rpx;
}

.no-more-container {
  position: relative;
  height: 0;
  min-height: 0;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding: 0;
  overflow: visible;
}

.no-more-text {
  font-size: 24rpx;
  color: #9ca3af;
  opacity: 0;
  transform: translateY(20rpx);
  transition: opacity 0.3s ease, transform 0.3s ease;
  white-space: nowrap;
}

.no-more-text.no-more-visible {
  opacity: 1;
  transform: translateY(0);
}
