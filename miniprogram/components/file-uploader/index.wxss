.drawer-body {
  padding: 40rpx 40rpx 80rpx;
}

.upload-options {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.upload-btn {
  display: flex;
  align-items: center;
  background: var(--bg-card);
  padding: 32rpx;
  border-radius: 24rpx;
  border: 1px solid var(--border-light);
}

.upload-btn:active {
  background: var(--bg-page);
}

.btn-text {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-main);
  flex: 1;
}

/* Icon Box Styles (Copied for consistency) */
.icon-box {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.icon-box.blue { 
  background: var(--primary-light); 
}

.tool-emoji {
  font-size: 44rpx;
}

.ui-arrow {
  color: var(--text-disabled);
  font-size: 24rpx;
  margin-left: 12rpx;
}

/* Preview Modal Styles */
.preview-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(15rpx);
  z-index: 15000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 120rpx; 
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.2s;
}

@media (prefers-color-scheme: dark) {
  .preview-mask {
    background: rgba(0, 0, 0, 0.4);
  }
}

.preview-mask.visible {
  opacity: 1;
  pointer-events: auto;
}

.preview-container {
  width: 600rpx;
  background: var(--bg-card);
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.15);
}

.preview-header {
  padding: 32rpx;
  text-align: center;
  border-bottom: 1px solid var(--border-light);
}

.preview-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-main);
}

.preview-content {
  padding: 30rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

.file-preview-img {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
  object-fit: contain;
}

.file-preview-pdf {
  width: 100%;
  height: 300rpx;
  background: var(--bg-main); /* Fallback */
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1px dashed var(--border-light);
}

.pdf-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.pdf-name {
  font-size: 28rpx;
  color: var(--text-main);
  max-width: 90%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.pdf-tip {
    font-size: 24rpx;
    color: var(--text-sub);
    margin-top: 8rpx;
}

.quota-warning {
  display: flex;
  align-items: center;
  background: rgba(255, 149, 0, 0.1);
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  width: 100%;
  box-sizing: border-box;
}

.warning-icon {
  margin-right: 12rpx;
  font-size: 28rpx;
}

.warning-text {
  font-size: 26rpx;
  color: #FF9500;
  font-weight: 500;
}

.preview-footer {
  display: flex;
  border-top: 1px solid var(--border-light);
}

.preview-footer button {
  flex: 1;
  background: transparent;
  font-size: 32rpx;
  line-height: 100rpx;
  border: none;
  border-radius: 0;
}

.preview-footer button::after {
  border: none;
}

.btn-cancel {
  color: var(--text-sub);
  border-right: 1px solid var(--border-light) !important;
}

.btn-confirm {
  color: var(--primary);
  font-weight: 600;
}
