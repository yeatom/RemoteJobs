/* Global Container */
.login-wall {
  --anchor-y: 45.45vh;
  
  /* --- 新增：大厂级 Mascot 引擎变量 --- */
  --star-x: 50vw;
  --star-y: 50vh;
  --star-size: 500rpx;
  --star-opacity: 1;
  --star-scale: 1;
  
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 10000;
  display: none;
  opacity: 0;
  background: transparent;
  transition: opacity 1.5s ease-in-out;
}

.login-wall.visible {
  display: block !important;
  opacity: 1 !important;
}

/* 整体淡出流程 */
.login-wall.wall-fade-out {
  opacity: 0;
  pointer-events: none;
}

/* --- Mascot 独立物理层 --- */
.mascot-container {
  position: absolute;
  z-index: 1001;
  left: 0;
  top: 0;
  /* 坐标投射：基于变量精确控制位姿 */
  width: var(--star-size);
  height: var(--star-size);
  opacity: var(--star-opacity);
  transform: translate3d(
    calc(var(--star-x) - (var(--star-size) / 2)),
    calc(var(--star-y) - (var(--star-size) / 2)),
    0
  ) scale(var(--star-scale));
  
  /* 关键：所有物理属性共用同一套高精度过渡 */
  transition: 
    transform 0.8s cubic-bezier(0.23, 1, 0.32, 1),
    width 0.8s cubic-bezier(0.23, 1, 0.32, 1),
    height 0.8s cubic-bezier(0.23, 1, 0.32, 1),
    opacity 0.8s ease;
    
  will-change: transform, opacity, width, height;
  pointer-events: none;
}

/* 针对最终淡出阶段，拉长过渡时间，实现优雅的“飞走” */
.login-wall.s-hidden .mascot-container {
  transition: 
    transform 1.5s cubic-bezier(0.4, 0, 0.2, 1),
    opacity 1.5s ease-in-out;
}

.mascot-inner {
  width: 100%;
  height: 100%;
  /* 默认保持呼吸 */
  animation: ai-breathe 4s infinite ease-in-out;
}

/* 停止呼吸：当进入消失阶段，停止呼吸 */
.login-wall.s-hidden .mascot-inner {
  animation-play-state: paused !important;
}

.ai-star-view {
  width: 100%;
  height: 100%;
  display: block;
  filter: drop-shadow(0 0 15rpx rgba(46, 95, 233, 0.4));
}

@keyframes ai-breathe {
  0%, 100% { transform: scale(0.95) rotate(-2deg); }
  50% { transform: scale(1.05) rotate(2deg); }
}

/* --- 场景定义 (Scene Setters) --- */

/* Scene: Splash (开屏) */
.login-wall.s-splash {
  --star-x: 50vw;
  --star-y: 50vh;
  --star-size: 500rpx;
  --star-opacity: 1;
}

/* Scene: Login Card (登录卡片) */
.login-wall.s-login {
  --star-x: calc(11vw + 82rpx);
  --star-y: calc(var(--anchor-y) - 130rpx); 
  --star-size: 160rpx;
  --star-opacity: 1;
}

/* Loading 状态：星星停留在中心 */
.login-wall.s-loading {
  --star-x: 50vw;
  --star-y: calc(var(--anchor-y) - 80rpx); 
  --star-size: 160rpx;
  --star-opacity: 1;
}

/* Scene: Hidden (Exit - 成功淡出) */
.login-wall.s-hidden {
  --star-opacity: 0;
  /* 特意不改 size，防止维度坍塌，但可以给一个极轻微的飞升感 */
  --star-y: 40vh; 
}

/* Background Layer */
.glass-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  background: #ffffff; /* 大星星开屏阶段保持纯白背景 */
  backdrop-filter: none;
  -webkit-backdrop-filter: none;
  transition: all 1.2s ease;
}

.login-wall.s-login .glass-mask {
  background: rgba(255, 255, 255, 0.4); /* 小星星登录阶段变为透明毛玻璃 */
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(12px); /* 稍微加深一点点模糊，保证卡片文字清晰 */
}


/* 强制覆盖 Tabbar：确保淡出过程遮挡底部 */
.login-wall.wall-fade-out {
  opacity: 0 !important;
  pointer-events: none;
  z-index: 999999 !important; /* 提到最高层级 */
}
.splash-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: opacity 0.5s ease;
  z-index: 2;
  pointer-events: none;
}

.splash-content.fade-out {
  opacity: 0;
}


/* --- Phase 2: Login Card --- */
.login-card {
  position: fixed; 
  left: 50%;
  top: var(--anchor-y); /* 使用全局锚点变量 */
  /* 使用 -50% 让卡片自身的中轴线对齐锚点 */
  transform: translate(-50%, -40%); 
  
  width: 78vw; 
  background: rgba(255, 255, 255, 0.82); 
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  
  border-radius: 64rpx;
  padding: 64rpx 48rpx 40rpx 48rpx; /* 减少底部内边距 */
  box-shadow: 0 40rpx 100rpx rgba(0, 0, 0, 0.15);
  
  opacity: 0;
  transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  pointer-events: none;
  z-index: 10;
  display: flex;
  flex-direction: column;
}

.login-card.show {
  opacity: 1;
  transform: translate(-50%, -50%); /* 最终落位在 5/11 处 */
  pointer-events: auto;
}

/* 授权成功，整体渐渐淡出 */
.login-card.hide-all {
  opacity: 0 !important;
  pointer-events: none;
  /* 不移动，保持在原地 */
  transform: translate(-50%, -50%) !important;
}

/* 内部内容淡出逻辑 */
.card-inner-content {
  opacity: 1;
  transition: opacity 0.5s ease;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.card-inner-content.content-fade-out {
  opacity: 0;
  pointer-events: none;
}

