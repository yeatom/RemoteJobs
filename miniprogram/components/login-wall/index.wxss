  display: block;
  font-size: 44rpx;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 4rpx;
}

.sub-title {
  display: block;
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

/* Form */
.auth-section {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  padding: 20rpx 0;
}

.auth-tips {
  text-align: center;
}

.tips-text {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.6;
}

.phone-btn {
  gap: 16rpx;
}

.btn-icon {
  width: 44rpx;
  height: 44rpx;
}

.auth-desc {
  font-size: 24rpx;
  color: #94a3b8;
  text-align: center;
}

.primary-btn {
  width: 100% !important;
  height: 110rpx;
  background: linear-gradient(135deg, #3b82f6, #2563eb) !important;
  color: #ffffff !important;
  border-radius: 32rpx !important;
  font-size: 32rpx !important;
  font-weight: 700 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  margin-top: 0rpx !important;
  box-shadow: 0 20rpx 40rpx rgba(37, 99, 235, 0.2) !important;
}

.card-footer {
  margin-top: 35rpx;
  padding-bottom: 12rpx;
  text-align: center;
}

.protocol {
  font-size: 22rpx;
  color: #94a3b8;
}

/* Animations */
@keyframes breathe {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

@keyframes wave {
  0%, 80%, 100% { transform: scale(0.8); opacity: 0.3; }
  40% { transform: scale(1.5); opacity: 1; }
}

.error-layer {
  display: none !important;
}
