/* Global Container */
.login-wall {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 10000;
  visibility: hidden;
  pointer-events: none;
  background: transparent !important;
}

.login-wall.visible {
  visibility: visible;
  pointer-events: auto;
}

/* Background Layer - Âä®ÊÄÅËÉåÊôØÂàáÊç¢ üåì */
.glass-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transition: all 1.2s cubic-bezier(0.23, 1, 0.32, 1);
  z-index: 0;
  opacity: 1;
}

/* ÂàùÂßã Splash Áä∂ÊÄÅÔºöÁ∫ØÁôΩËÉåÊôØÔºåÈÅÆÊå°‰∏ªÈ°µÈù¢ */
.glass-mask.splash {
  background: #ffffff !important;
  backdrop-filter: blur(0px);
  -webkit-backdrop-filter: blur(0px);
}

/* ËΩ¨Êç¢Âà∞ Login Áä∂ÊÄÅÔºöËÉåÊôØÂèò‰∏∫ÈÄèÊòéÊØõÁéªÁíÉÔºåÈÄèÂá∫‰∏ªÈ°µÈù¢ */
.glass-mask.login {
  background: rgba(255, 255, 255, 0.03) !important; 
  backdrop-filter: blur(5px) brightness(102%); 
  -webkit-backdrop-filter: blur(5px) brightness(102%);
}

/* ÈöêËóè/ÊàêÂäüÁä∂ÊÄÅ */
.glass-mask.hidden {
  opacity: 0;
  backdrop-filter: blur(0px);
  -webkit-backdrop-filter: blur(0px);
}

/* --- Shared Animated Globe (The Engine üé®) --- */
.shared-globe {
  position: fixed;
  z-index: 1001;
  /* Â¢ûÂä† GPU È¢ÑÊ∏≤ÊüìÊèêÁ§∫ */
  will-change: transform, opacity, width, height;
  /* Êõ¥‰∏ùÊªëÁöÑÂºπÊÄßÊõ≤Á∫ø */
  transition: all 0.8s cubic-bezier(0.23, 1, 0.32, 1);
  pointer-events: none;
  overflow: visible !important;
  display: flex;
  align-items: center;
  justify-content: center;
  /* ÂàùÂßãÂº∫Âà∂Á°¨‰ª∂Âä†ÈÄü */
  transform: translate3d(0, 0, 0);
  backface-visibility: hidden;
  perspective: 1000px;
}

.ai-star {
  width: 100%;
  height: 100%;
  /* ÂëºÂê∏Âä®Áîª‰πüÊîπ‰∏∫ 3D ÂèòÊç¢‰ª•‰øùÊåÅÂú®Âêå‰∏ÄÊ∏≤ÊüìÂ±Ç */
  animation: ai-breathe 4s infinite ease-in-out;
  will-change: transform;
  /* Â¢ûÂä†‰∏ªÈ¢òËìùËâ≤Â§ñÂèëÂÖâÔºåÂ¢ûÂº∫Ë¥®ÊÑü */
  filter: drop-shadow(0 0 15rpx rgba(46, 95, 233, 0.4));
}

@keyframes ai-breathe {
  0%, 100% { transform: translate3d(0,0,0) scale(0.85) rotate(-2deg); opacity: 0.9; }
  50% { transform: translate3d(0,0,0) scale(1.05) rotate(2deg); opacity: 1; }
}

/* State 1: Splash (Centered, Large) */
.shared-globe.splash {
  width: 500rpx;
  height: 500rpx;
  top: 0; 
  left: 0;
  /* ‰ΩøÁî® translate3d ËøõË°åÁªùÂØπÂÆö‰ΩçÔºåÈÅøÂºÄ Layout ÊäñÂä® */
  transform: translate3d(calc(50vw - 250rpx), calc(50vh - 250rpx), 0);
}

/* State 2: Login (Top-Left of Card, Small) */
.shared-globe.login {
  width: 160rpx;
  height: 160rpx;
  top: 0;
  left: 0;
  /* 
     ËÆ°ÁÆóÊ†°ÂáÜÔºö
     X: 50vw - (78vw/2) + 48rpx padding = 11vw + 48rpx
     ÂÜçÂêëÂ∑¶ÂÅèÁßª 20rpx: 28rpx -> 8rpx
     Y: 18vh + 64rpx padding (ÂêåÊ≠•Âç°Áâá‰ΩçÁΩÆ)
  */
  transform: translate3d(calc(11vw + 8rpx), calc(18vh + 64rpx), 0);
}

/* State 3: Hidden (Success Fade Out) */
.shared-globe.hidden {
  opacity: 0;
  transform: scale(0.8);
  pointer-events: none;
}


/* --- Phase 1: Splash Content --- */
.splash-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: opacity 0.5s ease;
  z-index: 2;
  pointer-events: none;
}

.splash-content.fade-out {
  opacity: 0;
}


/* --- Phase 2: Login Card --- */
.login-card {
  position: fixed; 
  left: 50%;
  top: 15vh; /* ‰ªé 20vh ‰∏äÁßªËá≥ 15vh */
  transform: translateX(-50%) translateY(40rpx); 
  
  width: 78vw; 
  background: rgba(255, 255, 255, 0.82); 
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  
  border-radius: 64rpx;
  padding: 64rpx 48rpx;
  box-shadow: 0 40rpx 100rpx rgba(0, 0, 0, 0.15);
  
  opacity: 0;
  transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  pointer-events: none;
  z-index: 10;
  display: flex;
  flex-direction: column;
}

.login-card.show {
  opacity: 1;
  transform: translateX(-50%) translateY(0);
  pointer-events: auto;
}

/* Provide space for the shared lottie engine */
.logo-placeholder {
  width: 140rpx; /* Slightly smaller than canvas to feel snug */
  height: 140rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
