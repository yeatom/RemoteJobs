.login-wall {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 10000;
  visibility: hidden;
  pointer-events: none;
}

.login-wall.visible {
  visibility: visible;
  pointer-events: auto;
}

.glass-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #ffffff; /* 初始为纯白，覆盖底层页面 */
  transition: all 0.8s ease;
}

.visible .glass-mask {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
}

/* Phase 1: Splash Layer */
.splash-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 1;
  transform: translateY(0);
  transition: all 0.8s cubic-bezier(0.19, 1, 0.22, 1);
  pointer-events: none;
}

/* 向上移动 Splash 内容，模拟 Logo 归位到 Card Header */
.splash-layer.morph-to-login {
  opacity: 0;
  transform: translateY(-80rpx); /* Move UP to match card header position visually if we wanted perfect morph, but fade out works well with card fade in */
}

/* Phase 2: Login Card Morphing */
.login-card {
  position: relative;
  width: 86%;
  background: #ffffff;
  border-radius: 60rpx;
  padding: 64rpx 48rpx;
  box-shadow: 0 50rpx 150rpx rgba(0, 0, 0, 0.1);
  opacity: 0;
  transform: translateY(80rpx); /* Start slightly down */
  transition: all 0.8s cubic-bezier(0.19, 1, 0.22, 1);
  display: none;
}

.login-card.show {
  display: block;
  opacity: 1;
  transform: translateY(0);
}

/* Error Phase */
.error-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transform: scale(0.95);
  transition: all 0.6s ease;
  pointer-events: none;
}

.error-layer.active {
  opacity: 1;
  transform: scale(1);
  pointer-events: auto;
}

.error-box {
  width: 80%;
  background: rgba(255, 255, 255, 0.9);
  padding: 60rpx;
  border-radius: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 30rpx 80rpx rgba(0, 0, 0, 0.05);
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  filter: grayscale(100%);
  opacity: 0.6;
}

.error-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 12rpx;
}

.error-desc {
  font-size: 26rpx;
  color: #94a3b8;
  margin-bottom: 50rpx;
  text-align: center;
}

.retry-btn {
  width: 240rpx !important;
  height: 90rpx;
  background: #3b82f6;
  color: #fff;
  border-radius: 45rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-box-large {
  width: 160rpx; /* Unified Size */
  height: 160rpx;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 40rpx 80rpx rgba(37, 99, 235, 0.3);
  margin-bottom: 60rpx;
  animation: breathe 2s ease-in-out infinite;
  transition: all 0.8s cubic-bezier(0.19, 1, 0.22, 1);
}

/* 两个 Logo Box 大小一致，位置视觉对齐 */
.logo-box {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  box-shadow: 0 20rpx 40rpx rgba(37, 99, 235, 0.25);
  color: #fff;
  font-size: 56rpx;
  font-weight: 800;
}

@keyframes breathe {
  0%, 100% { transform: scale(1); box-shadow: 0 40rpx 80rpx rgba(37, 99, 235, 0.3); }
  50% { transform: scale(1.05); box-shadow: 0 50rpx 100rpx rgba(37, 99, 235, 0.4); }
}

@keyframes wave {
  0%, 80%, 100% { transform: scale(0.8); opacity: 0.3; }
  40% { transform: scale(1.5); opacity: 1; }
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

