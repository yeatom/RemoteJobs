}

/* Status Banner */
.status-banner {
  height: 0;
  overflow: hidden;
  background: #fef2f2;
  border-radius: 24rpx;
  margin-bottom: 0;
  transition: all 0.5s cubic-bezier(0.19, 1, 0.22, 1);
  opacity: 0;
}

.status-banner.active {
  height: 80rpx;
  margin-bottom: 30rpx;
  opacity: 1;
}

.banner-content {
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.banner-text {
  font-size: 24rpx;
  color: #991b1b;
  font-weight: 500;
}

