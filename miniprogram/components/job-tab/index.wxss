/* miniprogram/components/job-tab/index.wxss */
:host {
  display: block;
  height: 100%;
}

.tab-content-wrapper {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.search-bar {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  position: relative;
  z-index: 1;
}

.search-input {
  flex: 1;
  width: auto;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 18rpx;
  padding: 0 18rpx;
  background-color: var(--bg-page);
}

.search-placeholder {
  color: var(--text-holder);
  font-size: 24rpx;
  line-height: 64rpx;
}

.search-actions {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  flex: 0 0 auto;
}

/* Search pills (筛选, 功能 buttons) */
.search-pill {
  height: 45rpx;
  padding: 0 12rpx;
  border-radius: 18rpx;
  background-color: var(--primary-light);
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  flex: 0 0 auto;
  width: 84rpx;
  justify-content: center;
}

.search-pill-text {
  font-size: 22rpx;
  color: var(--primary-dark);
  line-height: 1;
  display: inline-block;
  max-width: 110rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.search-pill-triangle {
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 8rpx solid var(--primary-dark);
  margin-top: 12rpx;
  margin-left: 8rpx;
  transition: none;
  transform: rotate(var(--pill-rot, -45deg));
}

.search-pill-triangle-up {
  --pill-rot: 0deg;
}

/* Save Menu Dropdown */
.save-menu-mask {
  position: fixed;
  inset: 0;
  z-index: 999;
  background-color: transparent;
  opacity: 0;
  transition: opacity 0.25s ease;
  pointer-events: none;
}

.save-menu-mask-open {
  opacity: 1;
  pointer-events: auto;
}

.save-menu-dropdown {
  position: absolute;
  top: 84rpx;
  right: 124rpx;
  width: auto;
  min-width: 200rpx;
  z-index: 1000;
  background-color: var(--bg-card);
  border-radius: 12rpx;
  padding: 6rpx;
  box-shadow: var(--shadow-md);
  border: 1rpx solid var(--border);
}

.save-menu-option {
  background-color: transparent;
  padding: 18rpx 24rpx;
  font-size: 26rpx;
  color: var(--primary-dark);
  transition: background-color 0.2s ease;
  cursor: pointer;
  position: relative;
}

.save-menu-option::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 24rpx;
  right: 24rpx;
  height: 1rpx;
  background-color: var(--border);
}

.save-menu-option:active {
  background-color: var(--primary-light);
  color: var(--primary-dark);
}

.save-menu-option:last-child::after {
  display: none;
}

.save-menu-option-text {
  display: block;
}

.job-list-wrapper {
  flex: 1;
  min-height: 0;
  overflow: visible;
  box-sizing: border-box;
}

/* Featured tab subscription overlay */
.featured-tab-wrapper {
  position: relative;
}

/* Disable pointer events for search-bar and job-list when locked */
.featured-locked .search-bar,
.featured-locked .job-list-wrapper {
  pointer-events: none;
}

/* Overlay covers search-bar + job-list area */
.featured-overlay {
  position: absolute;
  inset: 0;
  z-index: 100;
  pointer-events: auto; /* Block all clicks */
  
  /* Layout for the button */
  display: flex;
  align-items: flex-end; /* Align to bottom */
  justify-content: center;
  padding-bottom: 15rpx; /* Set to 15rpx as requested (+5rpx) */
  
  /* Gradient Mask: Fades from bottom up, no solid white background covering entire area */
  background: linear-gradient(to top, 
      rgb(255 255 255 / 85%) 0%, 
      rgb(255 255 255 / 50%) 12%,
      rgb(255 255 255 / 0%) 30%
  );
}

.featured-overlay-text {
  font-size: 28rpx;
  color: var(--primary-dark);
  font-weight: 600;
  padding: 15.5rpx 40rpx;
  background: var(--bg-card);
  border-radius: 40rpx;
  box-shadow: var(--shadow-md);
  border: 1rpx solid var(--border);
  text-align: center;
  max-width: 80%;
  position: relative;
  z-index: 200;
}

/* Empty state for favorites tab */
.empty-favorites {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  z-index: 10;
}

.empty-favorites-text {
  font-size: 28rpx;
  color: #9ca3af;
}

