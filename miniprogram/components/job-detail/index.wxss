/* miniprogram/components/job-detail/index.wxss */
.detail-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 2999;
}

.detail-drawer {
  position: fixed;
  top: 0;
  right: -100%; /* Start off-screen from right */
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  z-index: 3000;
  transition: right 0.3s ease;
  box-shadow: -2rpx 0 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}

.detail-drawer-open {
  right: 0; /* Slide in from right */
}

.detail-header {
  padding: 40rpx 32rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.back-button {
  width: 60rpx;
  height: 60rpx;
  font-size: 40rpx;
  color: #111827;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.back-icon {
  font-size: 44rpx;
  font-weight: 500;
}

.close-button {
  width: 60rpx;
  height: 60rpx;
  font-size: 48rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.collect-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.collect-icon {
  font-size: 48rpx;
  color: #9ca3af;
}

.collect-icon-active {
  color: #fbbf24;
}

.detail-content {
  flex: 1;
  height: 0;
  padding-top: 0;
}

.detail-body {
  padding: 32rpx;
}

.detail-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #111827;
  display: block;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

.detail-meta {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 24rpx;
}

.detail-meta-item {
  margin-right: 6rpx;
}

.detail-meta-dot {
  margin: 0 6rpx;
}

.detail-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 32rpx;
}

.detail-tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 16rpx;
  height: 48rpx;
  border-radius: 999rpx;
  background-color: #e5f0ff;
}

.detail-tag-text {
  font-size: 24rpx;
  color: #1d4ed8;
}

.detail-description {
  margin-bottom: 32rpx;
  padding: 32rpx 0;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.detail-description-text {
  font-size: 30rpx;
  color: #111827;
  line-height: 1.8;
  white-space: pre-wrap;
  word-break: break-word;
}

.detail-link {
  padding-top: 24rpx;
  border-top: 1rpx solid #eee;
}

.link-button {
  width: 100%;
  background-color: #1d4ed8;
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 24rpx 0;
}

.link-button::after {
  border: none;
}

.loading, .error {
  padding: 80rpx 32rpx;
  text-align: center;
  font-size: 28rpx;
  color: #9ca3af;
}
