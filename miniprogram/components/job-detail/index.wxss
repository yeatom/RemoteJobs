/* miniprogram/components/job-detail/index.wxss */
.detail-drawer {
  position: fixed;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  z-index: 3000;
  box-shadow: -2rpx 0 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  /* Enable hardware acceleration for smooth animation */
  will-change: transform;
  /* Transform is controlled by inline style */
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.detail-drawer-open {
  /* Class is used for state tracking, transform is controlled by inline style */
}

.detail-drawer-swiping {
  transition: none !important; /* Disable transition during swipe for smooth dragging */
}

/* When not swiping, enable smooth transition for transform */
.detail-drawer:not(.detail-drawer-swiping) {
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 头部样式已提取到 app.wxss */

.close-button {
  width: 60rpx;
  height: 60rpx;
  font-size: 48rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.collect-button {
  width: 60rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.collect-icon {
  font-size: 36rpx;
  font-weight: 1000;
  color: #9ca3af;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  letter-spacing: -3rpx;
}

.collect-icon-active {
  color: #1d4ed8;
  text-shadow: 0 0 6rpx rgba(29, 78, 216, 0.45);
}

.detail-content {
  flex: 1;
  height: 0;
  padding-top: 0;
}

.detail-body {
  padding: 24rpx 43rpx;
}

.detail-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.detail-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #111827;
  display: block;
  margin-bottom: 0;
  flex: 1;
  line-height: 1.2;
}

.detail-meta {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 24rpx;
}

.detail-meta-item {
  margin-right: 6rpx;
}

.detail-meta-dot {
  margin: 0 6rpx;
}

.detail-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 25rpx;
}

.detail-tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 16rpx;
  height: 48rpx;
  border-radius: 999rpx;
  background-color: #e5f0ff;
}

.detail-tag-text {
  font-size: 24rpx;
  color: #1d4ed8;
}

.detail-description {
  margin-bottom: 32rpx;
  padding: 18rpx 0;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.detail-description-text {
  font-size: 27rpx;
  color: #111827;
  line-height: 1.84;
  white-space: pre-wrap;
  word-break: break-word;
  user-select: text;
  -webkit-user-select: text;
}

.detail-description-rich {
  font-size: 27rpx;
  color: #111827;
  line-height: 1.84;
  user-select: text;
  -webkit-user-select: text;
}

.detail-link {
  padding-top: 19rpx;
  /* removed extra top border to avoid double separator */
  border-top: none;
}

.link-button {
  width: 100%;
  background-color: #1d4ed8;
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 24rpx 0;
}

.link-button::after {
  border: none;
}

.loading, .error {
  padding: 80rpx 32rpx;
  text-align: center;
  font-size: 28rpx;
  color: #9ca3af;
}

.back-icon {
  display: none;
}

.detail-title-row .collect-button {
  height: 48rpx;
  align-items: center;
}

