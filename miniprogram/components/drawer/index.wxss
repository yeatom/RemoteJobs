/* miniprogram/components/drawer/index.wxss */
.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: transparent; /* 透明蒙版，只用于拦截点击事件 */
  z-index: 1999;
  opacity: 0;
  transition: opacity 0.25s ease;
  pointer-events: none;
}

.drawer-mask.drawer-mask-open {
  opacity: 1;
  pointer-events: auto;
}

.drawer-menu {
  position: fixed;
  top: 0;
  right: 0;
  left: auto;
  width: 73%;
  height: 100%;
  background-color: #ffffff;
  z-index: 2000;
  transition: transform 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: -2rpx 0 16rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  /* Enable hardware acceleration */
  will-change: transform;
  transform: translate3d(100%, 0, 0); /* Start off-screen to the right */
  -webkit-transform: translate3d(100%, 0, 0);
}

.drawer-open {
  transform: translate3d(0, 0, 0); /* Slide in from right */
}

.drawer-menu.drawer-swiping {
  transition: none; /* Disable transition during swipe */
}

.drawer-menu.drawer-closing {
  transition: transform 0.25s cubic-bezier(0.4, 0, 0.2, 1); /* 关闭时的动画 */
}

.drawer-top {
  height: 120rpx;
  padding: 0 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #eef2f7;
  position: relative;
}

.drawer-close {
  position: absolute;
  left: 18rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  color: #111827;
}

.drawer-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #111827;
}

.drawer-body {
  flex: 1;
  height: 0;
  padding: 28rpx 28rpx 160rpx;
  box-sizing: border-box;
}

.drawer-section {
  margin-bottom: 34rpx;
}

.drawer-section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 18rpx;
}

.drawer-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 18rpx 18rpx;
}

.drawer-chip {
  height: 35px;
  border-radius: 12rpx;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border: 2rpx solid #e5e7eb; /* 非选中状态使用浅灰色边框 */
}

.drawer-chip-text {
  font-size: 27rpx;
  color: #111827;
}

.drawer-chip-active {
  background: rgba(29, 78, 216, 0.10);
  border-color:rgb(107, 144, 245); /* 主题蓝色边框 */
}

.drawer-chip-active .drawer-chip-text {
  color: #1d4ed8; /* 主题蓝色字体 */
  font-weight: 600;
}

.drawer-footer {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx 24rpx 36rpx;
  background: #ffffff;
  border-top: 1rpx solid #eef2f7;
  display: flex;
  gap: 16rpx;
  box-sizing: border-box;
}

.drawer-btn {
  flex: 1;
  height: 76rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
}

.drawer-btn-ghost {
  background: #f3f4f6;
  color: #374151;
}

.drawer-btn-primary {
  background: #1d4ed8;
  color: #ffffff;
}
