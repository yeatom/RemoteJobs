/* miniprogram/components/drawer/index.wxss */
.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 1999;
}

.drawer-menu {
  position: fixed;
  top: 0;
  right: -86%;
  left: auto;
  width: 86%;
  height: 100%;
  background-color: #ffffff;
  z-index: 2000;
  transition: right 0.25s ease;
  box-shadow: -2rpx 0 16rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
}

.drawer-open {
  right: 0;
}

.drawer-top {
  height: 120rpx;
  padding: 0 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #eef2f7;
  position: relative;
}

.drawer-close {
  position: absolute;
  left: 18rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  color: #111827;
}

.drawer-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #111827;
}

.drawer-body {
  flex: 1;
  height: 0;
  padding: 28rpx 28rpx 160rpx;
  box-sizing: border-box;
}

.drawer-section {
  margin-bottom: 34rpx;
}

.drawer-section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 18rpx;
}

.drawer-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 18rpx 18rpx;
}

.drawer-chip {
  height: 76rpx;
  border-radius: 14rpx;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border: 2rpx solid transparent;
}

.drawer-chip-text {
  font-size: 28rpx;
  color: #111827;
}

.drawer-chip-active {
  background: rgba(29, 78, 216, 0.10);
  border-color: #1d4ed8;
}

.drawer-chip-active .drawer-chip-text {
  color: #1d4ed8;
  font-weight: 600;
}

.drawer-footer {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 28rpx 44rpx;
  background: #ffffff;
  border-top: 1rpx solid #eef2f7;
  display: flex;
  gap: 20rpx;
  box-sizing: border-box;
}

.drawer-btn {
  flex: 1;
  height: 92rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 600;
}

.drawer-btn-ghost {
  background: #f3f4f6;
  color: #374151;
}

.drawer-btn-primary {
  background: #10b981;
  color: #ffffff;
}
