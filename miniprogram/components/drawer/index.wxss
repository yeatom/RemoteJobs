/* miniprogram/components/drawer/index.wxss */
.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 1999;
}

.drawer-menu {
  position: fixed;
  top: 0;
  left: -80%; /* Start off-screen */
  width: 80%;
  height: 100%;
  background-color: #ffffff;
  z-index: 2000;
  transition: left 0.3s ease;
  box-shadow: 2rpx 0 10rpx rgba(0, 0, 0, 0.1);
}

.drawer-open {
  left: 0; /* Slide in */
}

.drawer-header {
  display: flex;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #eee;
}

.avatar, .avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.avatar-placeholder {
  background-color: #e0e0e0; /* Gray placeholder color */
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.drawer-list {
  padding: 24rpx 0;
}

.drawer-item {
  padding: 28rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.drawer-item-text {
  font-size: 30rpx;
  color: #333;
}
