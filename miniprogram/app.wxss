/**app.wxss**/

/**
 * 主题颜色定义（统一使用以下颜色）
 * Theme Colors:
 * - 主题蓝色文字/边框: #1d4ed8
 * - 主题蓝色背景: #e5f0ff
 * - 按钮的背景色: #3B82F6
 * 
 * 使用场景：
 * - 工作标签tag: 背景 #e5f0ff, 文字 #1d4ed8
 * - 筛选按钮: 背景 #e5f0ff, 文字 #1d4ed8
 * - Tab选中状态: 背景 #e5f0ff, 文字 #1d4ed8
 * - 按钮背景色: #3B82F6 (用于生成简历按钮、一键申请按钮、筛选确定按钮等)
 * - 其他需要强调的元素
 */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 公共头部样式 - 供 job-detail 和 drawer 组件复用 */
.detail-header {
  padding: 40rpx 32rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.back-hit {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.back-button {
  width: 16rpx;
  height: 16rpx;
  border-left: 5rpx solid #111827;
  border-bottom: 5rpx solid #111827;
  transform: rotate(45deg);
  margin-left: 40rpx;
}

.back-button::after {
  content: '';
}

/* --- Common Bottom Sheet Styles (复用弹窗样式) --- */
/* 蒙版样式 */
.bottom-sheet-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.35);
  z-index: 2499;
  opacity: 0;
  transition: opacity 0.25s ease;
  will-change: opacity;
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
}

.bottom-sheet-mask-open {
  opacity: 1;
}

/* 弹窗基础样式 */
.bottom-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  max-height: 80vh;
  background: #ffffff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  transform: translate3d(0, 100%, 0);
  transition: transform 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 2500;
  display: flex;
  flex-direction: column;
  will-change: transform;
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
  -webkit-transform: translate3d(0, 100%, 0);
}

.bottom-sheet-open {
  transform: translate3d(0, 0, 0);
  -webkit-transform: translate3d(0, 0, 0);
}

/* 弹窗头部基础样式 */
.bottom-sheet-header {
  display: flex;
  align-items: center;
  padding: 16rpx 32rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

/* 弹窗内容基础样式 */
.bottom-sheet-content {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx;
  padding-top: 24rpx;
}
